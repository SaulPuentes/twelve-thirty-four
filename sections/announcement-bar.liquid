{%- if section.settings.show_announcement -%}
<div 
  class="announcement-bar color-{{ section.settings.color_scheme }}"
  style="--announcement-height: {{ section.settings.height }}px;"
>
  <div class="announcement-bar__content page-width">
    {%- if section.settings.link != blank -%}
      <a href="{{ section.settings.link }}" class="announcement-bar__link">
    {%- endif -%}

    <p class="announcement-bar__text">
      {{ section.settings.text }}
    </p>

    {%- if section.settings.link != blank -%}
      </a>
    {%- endif -%}
  </div>
</div>
{%- endif -%}

{% stylesheet %}
  .announcement-bar {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: var(--announcement-height, 40px);
    padding: 0.5rem 1rem;
    text-align: center;
  }

  .announcement-bar__content {
    width: 100%;
  }

  .announcement-bar__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .announcement-bar__link:hover {
    text-decoration: underline;
  }

  .announcement-bar__text {
    font-family: var(--font-body-family);
    font-size: 0.75rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin: 0;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Announcement bar",
  "class": "announcement-bar-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Free shipping on orders over $100"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Height",
      "min": 30,
      "max": 60,
      "step": 2,
      "unit": "px",
      "default": 40
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-2"
    }
  ],
  "enabled_on": {
    "groups": ["header"]
  }
}
{% endschema %}

