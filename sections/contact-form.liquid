{%- comment -%}
  Contact Form Section
  Displays a customizable contact form with floating labels
{%- endcomment -%}

<section class="contact-section color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <div class="contact-grid">
      {%- comment -%} Left Column - Contact Info {%- endcomment -%}
      <div class="contact-info">
        {%- if section.settings.heading != blank -%}
          <h1 class="contact-heading">{{ section.settings.heading }}</h1>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <p class="contact-description">{{ section.settings.description }}</p>
        {%- endif -%}

        <div class="contact-details">
          {%- if section.settings.email != blank -%}
            <div class="contact-detail">
              <span class="contact-detail__label">{{ 'contact.form.email' | t }}</span>
              <a href="mailto:{{ section.settings.email }}" class="contact-detail__value contact-detail__link">
                {{ section.settings.email }}
              </a>
            </div>
          {%- endif -%}

          {%- if section.settings.address != blank -%}
            <div class="contact-detail">
              <span class="contact-detail__label">{{ 'contact.form.address' | t }}</span>
              <address class="contact-detail__value contact-detail__address">{{ section.settings.address }}</address>
            </div>
          {%- endif -%}

          {%- if section.settings.hours != blank -%}
            <div class="contact-detail">
              <span class="contact-detail__label">{{ 'contact.form.hours' | t }}</span>
              <div class="contact-detail__value">{{ section.settings.hours }}</div>
            </div>
          {%- endif -%}
        </div>
      </div>

      {%- comment -%} Right Column - Contact Form {%- endcomment -%}
      <div class="contact-form-wrapper">
        {%- form 'contact', id: 'ContactForm', class: 'contact-form' -%}
          {%- if form.posted_successfully? -%}
            <div class="form-message form-message--success">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" aria-hidden="true">
                <path d="M10 0C4.48 0 0 4.48 0 10s4.48 10 10 10 10-4.48 10-10S15.52 0 10 0zM8 15l-5-5 1.41-1.41L8 12.17l7.59-7.59L17 6l-9 9z" fill="currentColor"/>
              </svg>
              <p>{{ 'contact.form.success_message' | t }}</p>
            </div>
          {%- endif -%}

          {%- if form.errors -%}
            <div class="form-message form-message--error">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}

          {%- comment -%} Name Field {%- endcomment -%}
          <div class="form-field">
            <input
              type="text"
              id="ContactFormName"
              name="contact[{{ 'contact.form.name' | t }}]"
              value="{{ form.name }}"
              required
              autocomplete="name"
              placeholder=" "
              class="form-field__input"
            >
            <label for="ContactFormName" class="form-field__label">{{ 'contact.form.name' | t }}</label>
          </div>

          {%- comment -%} Email Field {%- endcomment -%}
          <div class="form-field">
            <input
              type="email"
              id="ContactFormEmail"
              name="contact[email]"
              value="{{ form.email }}"
              required
              autocomplete="email"
              autocapitalize="off"
              placeholder=" "
              class="form-field__input"
            >
            <label for="ContactFormEmail" class="form-field__label">{{ 'contact.form.email' | t }}</label>
          </div>

          {%- if section.settings.show_subject -%}
            {%- comment -%} Subject Field {%- endcomment -%}
            <div class="form-field">
              <input
                type="text"
                id="ContactFormSubject"
                name="contact[{{ 'contact.form.subject' | t }}]"
                value=""
                required
                placeholder=" "
                class="form-field__input"
              >
              <label for="ContactFormSubject" class="form-field__label">{{ 'contact.form.subject' | t }}</label>
            </div>
          {%- endif -%}

          {%- comment -%} Message Field {%- endcomment -%}
          <div class="form-field form-field--textarea">
            <textarea
              id="ContactFormMessage"
              name="contact[{{ 'contact.form.message' | t }}]"
              rows="6"
              required
              placeholder=" "
              class="form-field__input form-field__textarea"
            >{{ form.body }}</textarea>
            <label for="ContactFormMessage" class="form-field__label">{{ 'contact.form.message' | t }}</label>
          </div>

          <button type="submit" class="contact-form__submit">
            {{ 'contact.form.submit' | t }}
          </button>
        {%- endform -%}
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    padding: 5rem 2rem;
  }

  @media screen and (min-width: 750px) {
    .contact-section {
      padding: 7rem 4rem;
    }
  }

  @media screen and (min-width: 990px) {
    .contact-section {
      padding: 8rem 4rem;
    }
  }

  .contact-grid {
    display: grid;
    gap: 3rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  @media screen and (min-width: 990px) {
    .contact-grid {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
  }

  /* Animation Sequences */
  .contact-form-wrapper {
    opacity: 0;
    animation: slideInRight 0.8s ease-out 0.2s forwards;
  }

  .contact-heading {
    font-family: var(--font-heading-family);
    font-size: clamp(2rem, 5vw, 3rem);
    line-height: 1.1;
    margin: 0 0 1.5rem;
    font-weight: 400;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out 0.4s forwards;
  }

  .contact-description {
    font-size: 1rem;
    line-height: 1.6;
    margin: 0 0 2rem;
    max-width: 500px;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out 0.5s forwards;
  }

  .contact-details {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-detail {
    opacity: 0;
    animation: fadeInUp 0.5s ease-out forwards;
  }

  .contact-detail:nth-child(1) {
    animation-delay: 0.6s;
  }

  .contact-detail:nth-child(2) {
    animation-delay: 0.7s;
  }

  .contact-detail:nth-child(3) {
    animation-delay: 0.8s;
  }

  .contact-detail__label {
    display: block;
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    opacity: 0.9;
    margin-bottom: 0.5rem;
  }

  .contact-detail__value {
    font-size: 1rem;
    line-height: 1.6;
  }

  .contact-detail__link {
    color: var(--color-foreground, #000);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: opacity 0.2s ease;
  }

  .contact-detail__link:hover {
    opacity: 0.7;
  }

  .contact-detail__address {
    font-style: normal;
    white-space: pre-line;
    opacity: 0.7;
  }

  /* Form */
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* Form Field Animations */
  .form-field {
    opacity: 0;
    animation: fadeInUp 0.5s ease-out forwards;
  }

  .form-field:nth-child(1) {
    animation-delay: 0.4s;
  }

  .form-field:nth-child(2) {
    animation-delay: 0.5s;
  }

  .form-field:nth-child(3) {
    animation-delay: 0.6s;
  }

  .form-field:nth-child(4) {
    animation-delay: 0.7s;
  }

  .form-field:nth-child(5) {
    animation-delay: 0.8s;
  }

  .contact-form__submit {
    opacity: 0;
    animation: fadeInUp 0.5s ease-out 0.9s forwards;
  }

  .form-message {
    opacity: 0;
    animation: fadeIn 0.4s ease-out forwards;
  }

  /* Floating Label Fields */
  .form-field {
    position: relative;
  }

  .form-field__input {
    width: 100%;
    padding: 1.5rem 1rem 0.5rem;
    border: 1px solid var(--color-border, rgba(0, 0, 0, 0.2));
    background: var(--color-background, #fff);
    color: var(--color-foreground, #000);
    font-size: 1rem;
    font-family: inherit;
  }
  .form-field__input,
  .form-field--textarea {
    transition: border-color 0.2s ease;
  }

  .form-field__input:focus {
    outline: none;
    border-color: var(--color-foreground, #000);
  }

  .form-field__textarea {
    resize: none;
  }

  .form-field__label {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-foreground, #000);
    opacity: 0.6;
    pointer-events: none;
    transition: all 0.2s ease;
  }

  .form-field--textarea .form-field__label {
    top: 1.5rem;
    transform: none;
  }

  /* Floating state - when focused or has value */
  .form-field__input:focus + .form-field__label,
  .form-field__input:not(:placeholder-shown) + .form-field__label {
    top: 0.375rem;
    transform: none;
    font-size: 0.625rem;
    opacity: 0.7;
  }

  .form-field--textarea .form-field__input:focus + .form-field__label,
  .form-field--textarea .form-field__input:not(:placeholder-shown) + .form-field__label {
    top: 0.375rem;
  }

  /* Submit Button */
  .contact-form__submit {
    width: 100%;
    padding: 1rem 2rem;
    background: transparent;
    border: 1px solid var(--color-foreground, #000);
    color: var(--color-foreground, #000);
    font-size: 0.75rem;
    font-family: inherit;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    cursor: pointer;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .contact-form__submit:hover {
    background: var(--color-foreground, #000);
    color: var(--color-background, #fff);
  }

  /* Form Messages */
  .form-message {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 1rem;
    font-size: 0.875rem;
    line-height: 1.4;
  }

  .form-message svg {
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  .form-message p {
    margin: 0;
  }

  .form-message--success {
    background-color: rgba(46, 125, 50, 0.1);
    color: #2e7d32;
  }

  .form-message--error {
    background-color: rgba(198, 40, 40, 0.1);
    color: #c62828;
  }
</style>

{% schema %}
{
  "name": "Contact form",
  "tag": "section",
  "class": "section-contact-form",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get in Touch"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Have a question about our arrangements, workshops, or community programs? We'd love to hear from you."
    },
    {
      "type": "header",
      "content": "Contact information"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "contact@example.com"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Address",
      "default": "123 Floral Street\nNew York, NY 10001\nUnited States"
    },
    {
      "type": "textarea",
      "id": "hours",
      "label": "Business hours",
      "default": "Monday - Friday: 9:00 AM - 6:00 PM\nSaturday: 10:00 AM - 4:00 PM\nSunday: Closed"
    },
    {
      "type": "header",
      "content": "Form settings"
    },
    {
      "type": "checkbox",
      "id": "show_subject",
      "label": "Show subject field",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Contact form"
    }
  ]
}
{% endschema %}
