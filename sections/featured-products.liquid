{%- liquid
  assign columns = section.settings.columns
  assign gap_value = section.settings.gap | default: 16
  assign product_count = section.blocks.size
  assign is_slider = false
  if product_count > columns
    assign is_slider = true
  endif
-%}

<script src="{{ 'product-card.js' | asset_url }}" defer></script>

<section
  id="FeaturedProducts-{{ section.id }}"
  class="featured-products{% if is_slider %} featured-products--has-slider{% endif %}"
  style="
    --featured-products-columns: {{ columns }};
    --featured-products-gap: {{ gap_value }}px;
  "
>
  <div class="page-width">
    {%- comment -%} Header {%- endcomment -%}
    {%- render 'section-header',
      heading: section.settings.heading,
      description: section.settings.description,
      show_view_all: section.settings.show_view_all,
      view_all_link: section.settings.view_all_link,
      view_all_label: section.settings.view_all_label
    -%}

    {%- comment -%} Products Grid {%- endcomment -%}
    <div class="featured-products__grid{% if is_slider %} featured-products__grid--slider{% endif %}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'product' -%}
            {%- if block.settings.product != blank -%}
              {%- render 'product-card',
                product: block.settings.product,
                show_add_to_cart: true,
                lazy_load: true,
                block: block
              -%}
            {%- else -%}
              {%- comment -%} Placeholder card when no product selected {%- endcomment -%}
              <div class="product-card product-card--placeholder" {{ block.shopify_attributes }}>
                <div class="product-card__link">
                  <div class="product-card__media">
                    {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'product-card__placeholder' }}
                  </div>
                  <div class="product-card__info">
                    <h3 class="product-card__title">{{ 'onboarding.product_title' | t }}</h3>
                    <p class="product-card__price">{{ 9900 | money }}</p>
                  </div>
                </div>
                <button type="button" class="product-card__add-to-cart" disabled>
                  {{ 'products.product.add_to_cart' | t | default: 'ADD TO CART' | upcase }}
                </button>
              </div>
            {%- endif -%}
        {%- endcase -%}
      {%- else -%}
        {%- comment -%} Show placeholders if no blocks {%- endcomment -%}
        {%- for i in (1..4) -%}
          <div class="product-card product-card--placeholder">
            <div class="product-card__link">
              <div class="product-card__media">
                {{ 'product-' | append: i | placeholder_svg_tag: 'product-card__placeholder' }}
              </div>
              <div class="product-card__info">
                <h3 class="product-card__title">{{ 'onboarding.product_title' | t }}</h3>
                <p class="product-card__price">{{ 100 | times: i | money }}</p>
              </div>
            </div>
            <button type="button" class="product-card__add-to-cart" disabled>
              {{ 'products.product.add_to_cart' | t | default: 'ADD TO CART' | upcase }}
            </button>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% stylesheet %}
  /* Section heading size variables */
  .featured-products {
    --section-heading-lg: 2.25rem;
    --section-heading-lg-desktop: 3rem;
    padding: 5rem 2rem;
  }

  @media screen and (min-width: 768px) {
    .featured-products {
      padding: 7rem 4rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .featured-products {
      padding: 8rem 4rem;
    }
  }

  /* Override snippet heading size with section-specific variables */
  .featured-products .section-header__heading {
    font-size: var(--section-heading-lg);
  }

  @media screen and (min-width: 1024px) {
    .featured-products .section-header__heading {
      font-size: var(--section-heading-lg-desktop);
    }
  }

  @media screen and (min-width: 1024px) {
    .featured-products .section-header__view-all {
      margin-left: -3.5rem;
    }
  }

  .featured-products__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--featured-products-gap, 1.5rem);
  }

  @media screen and (min-width: 750px) {
    .featured-products__grid {
      grid-template-columns: repeat(var(--featured-products-columns, 4), 1fr);
    }
  }

  /* Slider layout: remove right padding so grid bleeds to edge */
  .featured-products--has-slider {
    padding-right: 0;
  }

  .featured-products--has-slider .section-header__heading,
  .featured-products--has-slider .section-header__bar {
    padding-right: 2rem;
  }

  @media screen and (min-width: 768px) {
    .featured-products--has-slider .section-header__heading,
    .featured-products--has-slider .section-header__bar {
      padding-right: 4rem;
    }
  }

  /* Slider mode: horizontal scroll when products exceed columns */
  .featured-products__grid--slider {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding-right: 2rem;
  }

  @media screen and (min-width: 768px) {
    .featured-products__grid--slider {
      padding-right: 4rem;
    }
  }

  .featured-products__grid--slider::-webkit-scrollbar {
    display: none;
  }

  .featured-products__grid--slider > * {
    flex: 0 0 calc((100% - 2 * var(--featured-products-gap, 24px) - 1rem) / 2);
    scroll-snap-align: start;
  }

  @media screen and (min-width: 750px) {
    .featured-products__grid--slider > * {
      flex: 0 0 calc(
        (100% - var(--featured-products-columns, 4) * var(--featured-products-gap, 24px) - 2rem)
        / var(--featured-products-columns, 4)
      );
    }
  }

  /* Section-specific product card adjustments */
  .featured-products .product-card__info {
    padding-top: 1rem;
  }

  /* Fade-in sequence animation for product cards */
  .featured-products__grid .product-card,
  .featured-products__grid .product-card--placeholder {
    opacity: 0;
    animation: fadeIn 0.6s var(--animation-easing, ease) both;
  }

  .featured-products__grid .product-card:nth-child(1),
  .featured-products__grid .product-card--placeholder:nth-child(1) {
    animation-delay: 0.05s;
  }

  .featured-products__grid .product-card:nth-child(2),
  .featured-products__grid .product-card--placeholder:nth-child(2) {
    animation-delay: 0.1s;
  }

  .featured-products__grid .product-card:nth-child(3),
  .featured-products__grid .product-card--placeholder:nth-child(3) {
    animation-delay: 0.15s;
  }

  .featured-products__grid .product-card:nth-child(4),
  .featured-products__grid .product-card--placeholder:nth-child(4) {
    animation-delay: 0.2s;
  }

  .featured-products__grid .product-card:nth-child(5),
  .featured-products__grid .product-card--placeholder:nth-child(5) {
    animation-delay: 0.25s;
  }

  .featured-products__grid .product-card:nth-child(6),
  .featured-products__grid .product-card--placeholder:nth-child(6) {
    animation-delay: 0.3s;
  }

  .featured-products__grid .product-card:nth-child(7),
  .featured-products__grid .product-card--placeholder:nth-child(7) {
    animation-delay: 0.35s;
  }

  .featured-products__grid .product-card:nth-child(8),
  .featured-products__grid .product-card--placeholder:nth-child(8) {
    animation-delay: 0.4s;
  }

  .featured-products__grid .product-card:nth-child(n+9),
  .featured-products__grid .product-card--placeholder:nth-child(n+9) {
    animation-delay: 0.45s;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Featured products",
  "tag": "section",
  "class": "section-featured-products",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Thoughtful Gifts & Floral Creations"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our curated selection of blooms and hand-made objects, from locally crafted ceramics to candles and keepsakes sourced from artists around the world."
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns (desktop)",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap between products",
      "min": 8,
      "max": 48,
      "step": 4,
      "unit": "px",
      "default": 24
    },
    {
      "type": "header",
      "content": "View all link"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' link",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "Link label",
      "default": "Explore the shop"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "Link URL"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured products",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}

