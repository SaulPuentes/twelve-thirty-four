{%- liquid
  assign columns = section.settings.columns
-%}

<section
  id="FeaturedProducts-{{ section.id }}"
  class="featured-products section-spacing color-{{ section.settings.color_scheme }}"
  style="
    --featured-products-columns: {{ columns }};
    --featured-products-gap: {{ section.settings.gap }}px;
  "
>
  <div class="page-width">
    {%- comment -%} Header {%- endcomment -%}
    <div class="featured-products__header">
      <div class="featured-products__header-text">
        {%- if section.settings.subheading != blank -%}
          <p class="featured-products__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <h2 class="featured-products__heading h2">{{ section.settings.heading }}</h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <p class="featured-products__description">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>

      {%- if section.settings.show_view_all and section.settings.view_all_link != blank -%}
        <a href="{{ section.settings.view_all_link }}" class="featured-products__view-all">
          <span class="featured-products__arrow">â†’</span>
          <span>{{ section.settings.view_all_label | default: 'Explore the shop' }}</span>
        </a>
      {%- endif -%}
    </div>

    {%- comment -%} Products Grid {%- endcomment -%}
    <div class="featured-products__grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'product' -%}
            {%- if block.settings.product != blank -%}
              {% render 'product-card', product: block.settings.product, show_vendor: section.settings.show_vendor, block: block %}
            {%- else -%}
              <div class="product-card product-card--placeholder" {{ block.shopify_attributes }}>
                <div class="product-card__media">
                  {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'product-card__placeholder' }}
                </div>
                <div class="product-card__info">
                  <h3 class="product-card__title">{{ 'onboarding.product_title' | t }}</h3>
                  <p class="product-card__price">{{ 9900 | money }}</p>
                </div>
              </div>
            {%- endif -%}
        {%- endcase -%}
      {%- else -%}
        {%- comment -%} Show placeholders if no blocks {%- endcomment -%}
        {%- for i in (1..4) -%}
          <div class="product-card product-card--placeholder">
            <div class="product-card__media">
              {{ 'product-' | append: i | placeholder_svg_tag: 'product-card__placeholder' }}
            </div>
            <div class="product-card__info">
              <h3 class="product-card__title">{{ 'onboarding.product_title' | t }}</h3>
              <p class="product-card__price">{{ 100 | times: i | money }}</p>
            </div>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .featured-products {
    padding: var(--section-spacing, 4rem) 0;
  }

  .featured-products__header {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  @media screen and (min-width: 990px) {
    .featured-products__header {
      grid-template-columns: 2fr 1fr;
      align-items: end;
    }
  }

  .featured-products__subheading {
    font-family: var(--font-body-family);
    font-size: 0.75rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-foreground);
    opacity: 0.6;
    margin: 0 0 0.5rem;
  }

  .featured-products__heading {
    margin: 0 0 1rem;
  }

  .featured-products__description {
    font-family: var(--font-body-family);
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-foreground);
    opacity: 0.6;
    margin: 0;
    max-width: 630px;
  }

  .featured-products__view-all {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    color: var(--color-foreground);
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .featured-products__view-all:hover {
    opacity: 0.7;
  }

  .featured-products__arrow {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border: 1px solid var(--color-border);
    border-radius: 50%;
    transition: transform 0.3s ease, border-color 0.3s ease;
  }

  .featured-products__view-all:hover .featured-products__arrow {
    transform: translateX(4px);
    border-color: var(--color-foreground);
  }

  .featured-products__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--featured-products-gap, 1.5rem);
  }

  @media screen and (min-width: 750px) {
    .featured-products__grid {
      grid-template-columns: repeat(var(--featured-products-columns, 4), 1fr);
    }
  }

  /* Product card styles for this section - override base.css absolute positioning */
  .featured-products .product-card {
    position: relative;
    display: block;
    height: auto;
  }

  .featured-products .product-card__link {
    /* Override base.css position: absolute; inset: 0; */
    position: static;
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .featured-products .product-card__media {
    position: relative;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .featured-products .product-card__image,
  .featured-products .product-card__placeholder {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-products .product-card__placeholder {
    fill: #ccc;
    background-color: #f0f0f0;
  }

  .featured-products .product-card__info {
    padding: 1rem 0;
  }

  .featured-products .product-card__title {
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    font-weight: 400;
    line-height: 1.4;
    margin: 0 0 0.5rem;
    color: var(--color-foreground);
  }

  .featured-products .product-card__price {
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    color: var(--color-foreground);
    margin: 0;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Featured products",
  "tag": "section",
  "class": "section-featured-products",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Thoughtful Gifts & Floral Creations"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our curated selection of blooms and hand-made objects, from locally crafted ceramics to candles and keepsakes sourced from artists around the world."
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns (desktop)",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap between products",
      "min": 8,
      "max": 48,
      "step": 4,
      "unit": "px",
      "default": 24
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "header",
      "content": "View all link"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' link",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "Link label",
      "default": "Explore the shop"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "Link URL"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured products",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}

