{%- liquid
  assign columns = section.settings.columns
  assign gap_value = section.settings.gap | default: 16
-%}

<script src="{{ 'product-card.js' | asset_url }}" defer></script>

<section
  id="FeaturedProducts-{{ section.id }}"
  class="featured-products"
  style="
    --featured-products-columns: {{ columns }};
    --featured-products-gap: {{ gap_value }}px;
  "
>
  <div class="page-width">
    {%- comment -%} Header {%- endcomment -%}
    {%- if section.settings.heading != blank -%}
      <h2 class="featured-products__heading">{{ section.settings.heading | newline_to_br }}</h2>
    {%- endif -%}

    <div class="featured-products__header">
      {%- if section.settings.description != blank -%}
        <p class="featured-products__description">{{ section.settings.description }}</p>
      {%- endif -%}

      {%- if section.settings.show_view_all and section.settings.view_all_link != blank -%}
        <a href="{{ section.settings.view_all_link }}" class="featured-products__view-all">
          {% render 'animated-arrow' %}
          <span>{{ section.settings.view_all_label | default: 'Explore the shop' }}</span>
        </a>
      {%- endif -%}
    </div>

    {%- comment -%} Products Grid {%- endcomment -%}
    <div class="featured-products__grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'product' -%}
            {%- if block.settings.product != blank -%}
              {%- render 'product-card',
                product: block.settings.product,
                show_add_to_cart: true,
                lazy_load: true,
                block: block
              -%}
            {%- else -%}
              {%- comment -%} Placeholder card when no product selected {%- endcomment -%}
              <div class="product-card product-card--placeholder" {{ block.shopify_attributes }}>
                <div class="product-card__link">
                  <div class="product-card__media">
                    {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'product-card__placeholder' }}
                  </div>
                  <div class="product-card__info">
                    <h3 class="product-card__title">{{ 'onboarding.product_title' | t }}</h3>
                    <p class="product-card__price">{{ 9900 | money }}</p>
                  </div>
                </div>
                <button type="button" class="product-card__add-to-cart" disabled>
                  {{ 'products.product.add_to_cart' | t | default: 'ADD TO CART' | upcase }}
                </button>
              </div>
            {%- endif -%}
        {%- endcase -%}
      {%- else -%}
        {%- comment -%} Show placeholders if no blocks {%- endcomment -%}
        {%- for i in (1..4) -%}
          <div class="product-card product-card--placeholder">
            <div class="product-card__link">
              <div class="product-card__media">
                {{ 'product-' | append: i | placeholder_svg_tag: 'product-card__placeholder' }}
              </div>
              <div class="product-card__info">
                <h3 class="product-card__title">{{ 'onboarding.product_title' | t }}</h3>
                <p class="product-card__price">{{ 100 | times: i | money }}</p>
              </div>
            </div>
            <button type="button" class="product-card__add-to-cart" disabled>
              {{ 'products.product.add_to_cart' | t | default: 'ADD TO CART' | upcase }}
            </button>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% stylesheet %}
  /* Section heading size variables */
  .featured-products {
    --section-heading-lg: 2.25rem;
    --section-heading-lg-desktop: 3rem;
    padding: 5rem 2rem;
  }

  @media screen and (min-width: 768px) {
    .featured-products {
      padding: 7rem 4rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .featured-products {
      padding: 8rem 4rem;
    }
  }

  .featured-products__heading {
    font-family: var(--font-heading-family);
    font-size: var(--section-heading-lg);
    line-height: 1.1;
    margin: 0 0 1rem;
  }

  @media screen and (min-width: 1024px) {
    .featured-products__heading {
      font-size: var(--section-heading-lg-desktop);
    }
  }

  .featured-products__header {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-bottom: 4rem;
    align-items: end;
  }

  @media screen and (min-width: 1024px) {
    .featured-products__header {
      grid-template-columns: 2fr 1fr;
    }
  }

  .featured-products__description {
    font-family: var(--font-body-family);
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-foreground);
    opacity: 0.6;
    margin: 0;
    max-width: 630px;
  }

  @media screen and (min-width: 1024px) {
    .featured-products__description {
      grid-column: 1 / 2;
    }
  }

  .featured-products__view-all {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    color: var(--color-foreground);
    text-decoration: none;
    transition: opacity 0.3s ease, color 0.3s ease;
    justify-self: start;
  }

  @media screen and (min-width: 1024px) {
    .featured-products__view-all {
      margin-left: -3.5rem;
    }
  }

  .featured-products__view-all:hover {
    opacity: 0.7;
  }

  .featured-products__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--featured-products-gap, 1.5rem);
  }

  @media screen and (min-width: 750px) {
    .featured-products__grid {
      grid-template-columns: repeat(var(--featured-products-columns, 4), 1fr);
    }
  }

  /* Section-specific product card adjustments */
  .featured-products .product-card__info {
    padding-top: 1rem;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Featured products",
  "tag": "section",
  "class": "section-featured-products",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Thoughtful Gifts & Floral Creations"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our curated selection of blooms and hand-made objects, from locally crafted ceramics to candles and keepsakes sourced from artists around the world."
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns (desktop)",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap between products",
      "min": 8,
      "max": 48,
      "step": 4,
      "unit": "px",
      "default": 24
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "header",
      "content": "View all link"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' link",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "Link label",
      "default": "Explore the shop"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "Link URL"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured products",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}

