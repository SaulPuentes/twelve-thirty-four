{%- liquid
  assign columns = section.settings.columns
-%}

<section
  id="FeaturedProducts-{{ section.id }}"
  class="featured-products"
  style="
    --featured-products-columns: {{ columns }};
    --featured-products-gap: {{ section.settings.gap }}px;
  "
>
  <div class="page-width">
    {%- comment -%} Header {%- endcomment -%}
    {%- if section.settings.heading != blank -%}
      <h2 class="featured-products__heading">{{ section.settings.heading | newline_to_br }}</h2>
    {%- endif -%}

    <div class="featured-products__header">
      {%- if section.settings.description != blank -%}
        <p class="featured-products__description">{{ section.settings.description }}</p>
      {%- endif -%}

      {%- if section.settings.show_view_all and section.settings.view_all_link != blank -%}
        <a href="{{ section.settings.view_all_link }}" class="featured-products__view-all">
          {% render 'animated-arrow' %}
          <span>{{ section.settings.view_all_label | default: 'Explore the shop' }}</span>
        </a>
      {%- endif -%}
    </div>

    {%- comment -%} Products Grid {%- endcomment -%}
    <div class="featured-products__grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'product' -%}
            {%- if block.settings.product != blank -%}
              {%- assign product = block.settings.product -%}
              {%- assign first_variant = product.selected_or_first_available_variant -%}
              <div class="product-card" {{ block.shopify_attributes }}>
                <a href="{{ product.url }}" class="product-card__link" aria-label="{{ product.title }}">
                  <div class="product-card__media">
                    {%- if product.featured_media -%}
                      <img
                        src="{{ product.featured_media | image_url: width: 600 }}"
                        alt="{{ product.featured_media.alt | default: product.title | escape }}"
                        width="300"
                        height="{{ 300 | divided_by: product.featured_media.aspect_ratio | round }}"
                        class="product-card__image"
                        loading="lazy"
                      >
                    {%- else -%}
                      {{ 'product-1' | placeholder_svg_tag: 'product-card__placeholder' }}
                    {%- endif -%}
                  </div>
                  <div class="product-card__info">
                    <h3 class="product-card__title">{{ product.title }}</h3>
                    <p class="product-card__price">{{ product.price | money }}</p>
                  </div>
                </a>
                <button
                  type="button"
                  class="product-card__add-to-cart"
                  data-variant-id="{{ first_variant.id }}"
                  {% unless first_variant.available %}disabled{% endunless %}
                >
                  {%- if first_variant.available -%}
                    {{ 'products.product.add_to_cart' | t | upcase }}
                  {%- else -%}
                    {{ 'products.product.sold_out' | t | upcase }}
                  {%- endif -%}
                </button>
              </div>
            {%- else -%}
              <div class="product-card product-card--placeholder" {{ block.shopify_attributes }}>
                <div class="product-card__media">
                  {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'product-card__placeholder' }}
                </div>
                <div class="product-card__info">
                  <h3 class="product-card__title">{{ 'onboarding.product_title' | t }}</h3>
                  <p class="product-card__price">{{ 9900 | money }}</p>
                </div>
                <button type="button" class="product-card__add-to-cart" disabled>
                  {{ 'products.product.add_to_cart' | t | upcase }}
                </button>
              </div>
            {%- endif -%}
        {%- endcase -%}
      {%- else -%}
        {%- comment -%} Show placeholders if no blocks {%- endcomment -%}
        {%- for i in (1..4) -%}
          <div class="product-card product-card--placeholder">
            <div class="product-card__media">
              {{ 'product-' | append: i | placeholder_svg_tag: 'product-card__placeholder' }}
            </div>
            <div class="product-card__info">
              <h3 class="product-card__title">{{ 'onboarding.product_title' | t }}</h3>
              <p class="product-card__price">{{ 100 | times: i | money }}</p>
            </div>
            <button type="button" class="product-card__add-to-cart" disabled>
              {{ 'products.product.add_to_cart' | t | upcase }}
            </button>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% stylesheet %}
  /* Import section heading size variables */
  .featured-products {
    --section-heading-lg: 2.25rem;
    --section-heading-lg-desktop: 3rem;
  }

  .featured-products {
    padding: 5rem 2rem;
  }

  @media screen and (min-width: 768px) {
    .featured-products {
      padding: 7rem 4rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .featured-products {
      padding: 8rem 4rem;
    }
  }

  .featured-products__heading {
    font-family: var(--font-heading-family);
    font-size: var(--section-heading-lg);
    line-height: 1.1;
    text-transform: uppercase;
    margin: 0 0 1rem;
  }

  @media screen and (min-width: 1024px) {
    .featured-products__heading {
      font-size: var(--section-heading-lg-desktop);
    }
  }

  .featured-products__header {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-bottom: 4rem;
    align-items: end;
  }

  @media screen and (min-width: 1024px) {
    .featured-products__header {
      grid-template-columns: 2fr 1fr;
    }
  }

  .featured-products__description {
    font-family: var(--font-body-family);
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-foreground);
    opacity: 0.6;
    margin: 0;
    max-width: 630px;
  }

  @media screen and (min-width: 1024px) {
    .featured-products__description {
      grid-column: 1 / 2;
    }
  }

  .featured-products__view-all {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    color: var(--color-foreground);
    text-decoration: none;
    transition: opacity 0.3s ease, color 0.3s ease;
    justify-self: start;
  }

  @media screen and (min-width: 1024px) {
    .featured-products__view-all {
      margin-left: -3.5rem;
    }
  }

  .featured-products__view-all:hover {
    opacity: 0.7;
  }

  .featured-products__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--featured-products-gap, 1.5rem);
  }

  @media screen and (min-width: 750px) {
    .featured-products__grid {
      grid-template-columns: repeat(var(--featured-products-columns, 4), 1fr);
    }
  }

  /* Product card styles for this section - override base.css absolute positioning */
  .featured-products .product-card {
    position: relative;
    display: block;
    height: auto;
  }

  .featured-products .product-card__link {
    /* Override base.css position: absolute; inset: 0; */
    position: static;
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .featured-products .product-card__media {
    position: relative;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .featured-products .product-card__image,
  .featured-products .product-card__placeholder {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-products .product-card__placeholder {
    fill: #ccc;
    background-color: #f0f0f0;
  }

  .featured-products .product-card__info {
    padding: 1rem 0 0;
  }

  .featured-products .product-card__title {
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    font-weight: 400;
    line-height: 1.4;
    margin: 0 0 0.5rem;
    color: var(--color-foreground);
  }

  .featured-products .product-card__price {
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    color: #111;
    margin: 0 0 0.5rem;
  }

  .featured-products .product-card__add-to-cart {
    display: inline-block;
    width: auto;
    padding: 0.5rem 1rem;
    font-family: var(--font-body-family);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #111;
    background-color: #fff;
    border: 1px solid lightgray;
    cursor: pointer;
    transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
  }

  .featured-products .product-card__add-to-cart:hover:not(:disabled) {
    background-color: #111;
    color: #fff;
    border-color: #111;
  }

  .featured-products .product-card__add-to-cart:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
{% endstylesheet %}

{% javascript %}
  document.addEventListener('DOMContentLoaded', function() {
    const addToCartButtons = document.querySelectorAll('.featured-products .product-card__add-to-cart[data-variant-id]');
    addToCartButtons.forEach(function(button) {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const variantId = this.dataset.variantId;
        const originalText = this.textContent;
        this.disabled = true;
        this.textContent = '{{ "products.product.adding" | t | default: "ADDING..." }}';
        fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            id: variantId,
            quantity: 1
          })
        })
        .then(response => response.json())
        .then(data => {
          this.textContent = '{{ "products.product.added" | t | default: "ADDED!" }}';
          // Update cart count if element exists
          const cartCount = document.querySelector('[data-cart-count]');
          if (cartCount) {
            fetch('/cart.js')
              .then(res => res.json())
              .then(cart => {
                cartCount.textContent = cart.item_count;
                cartCount.classList.remove('hidden');
              });
          }
          setTimeout(() => {
            this.textContent = originalText;
            this.disabled = false;
          }, 2000);
        })
        .catch(error => {
          console.error('Error:', error);
          this.textContent = originalText;
          this.disabled = false;
        });
      });
    });
  });
{% endjavascript %}

{% schema %}
{
  "name": "Featured products",
  "tag": "section",
  "class": "section-featured-products",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Thoughtful Gifts & Floral Creations"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our curated selection of blooms and hand-made objects, from locally crafted ceramics to candles and keepsakes sourced from artists around the world."
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns (desktop)",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap between products",
      "min": 8,
      "max": 48,
      "step": 4,
      "unit": "px",
      "default": 24
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "header",
      "content": "View all link"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' link",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "Link label",
      "default": "Explore the shop"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "Link URL"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured products",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}

