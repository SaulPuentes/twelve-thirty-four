<footer
  id="Footer-{{ section.id }}"
  class="footer color-{{ section.settings.color_scheme }}"
>
  <div class="page-width">
    {%- comment -%} Top Row: Logo and Title {%- endcomment -%}
    <div class="footer__header">
      <h2 class="footer__title h3">{{ shop.name }}</h2>
      {%- if settings.logo != blank -%}
        <div class="footer__logo">
          <img
            src="{{ settings.logo | image_url: width: 200 }}"
            alt="{{ shop.name }}"
            height="80"
            loading="lazy"
          >
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} Middle Row: Content Grid {%- endcomment -%}
    <div class="footer__content">
      <div class="footer__grid">
        {%- comment -%} Contact Info {%- endcomment -%}
        <div class="footer__column footer__column--contact">
          {%- if section.settings.email != blank -%}
            <a href="mailto:{{ section.settings.email }}" class="footer__email">
              {{ section.settings.email }}
            </a>
          {%- endif -%}

          {%- if section.settings.address != blank -%}
            <address class="footer__address">
              {{ section.settings.address | newline_to_br }}
            </address>
          {%- endif -%}
        </div>

        {%- comment -%} Navigation Columns {%- endcomment -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'menu' -%}
            <div class="footer__column footer__column--nav" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="footer__column-heading">{{ block.settings.heading }}</h3>
              {%- endif -%}
              
              {%- if block.settings.menu != blank -%}
                <ul class="footer__nav-list">
                  {%- for link in linklists[block.settings.menu].links -%}
                    <li class="footer__nav-item">
                      <a href="{{ link.url }}" class="footer__nav-link">
                        {{ link.title }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    {%- comment -%} Bottom Row: Social + Copyright {%- endcomment -%}
    <div class="footer__bottom">
      <div class="footer__bottom-left">
        {%- if section.settings.show_say_hello -%}
          <a href="{{ routes.root_url }}pages/contact" class="footer__say-hello">
            <span class="footer__arrow">â†’</span>
            <span>Say hello</span>
          </a>
        {%- endif -%}

        <div class="footer__social">
          {%- if settings.social_instagram != blank -%}
            <a href="{{ settings.social_instagram }}" class="footer__social-link" aria-label="Instagram" target="_blank" rel="noopener">
              {% render 'icon', icon: 'instagram', size: 20 %}
            </a>
          {%- endif -%}
          {%- if settings.social_facebook != blank -%}
            <a href="{{ settings.social_facebook }}" class="footer__social-link" aria-label="Facebook" target="_blank" rel="noopener">
              {% render 'icon', icon: 'facebook', size: 20 %}
            </a>
          {%- endif -%}
          {%- if settings.social_pinterest != blank -%}
            <a href="{{ settings.social_pinterest }}" class="footer__social-link" aria-label="Pinterest" target="_blank" rel="noopener">
              {% render 'icon', icon: 'pinterest', size: 20 %}
            </a>
          {%- endif -%}
          {%- if settings.social_tiktok != blank -%}
            <a href="{{ settings.social_tiktok }}" class="footer__social-link" aria-label="TikTok" target="_blank" rel="noopener">
              {% render 'icon', icon: 'tiktok', size: 20 %}
            </a>
          {%- endif -%}
          {%- if settings.social_twitter != blank -%}
            <a href="{{ settings.social_twitter }}" class="footer__social-link" aria-label="Twitter" target="_blank" rel="noopener">
              {% render 'icon', icon: 'twitter', size: 20 %}
            </a>
          {%- endif -%}
        </div>
      </div>

      <div class="footer__bottom-right">
        <p class="footer__copyright">
          &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text | default: 'All rights reserved.' }}
        </p>
      </div>
    </div>
  </div>
</footer>

{% stylesheet %}
  .footer {
    padding: 4rem 0;
    border-top: 1px solid var(--color-border);
  }

  .footer__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .footer__title {
    font-family: var(--font-heading-family);
    margin: 0;
  }

  .footer__logo img {
    height: 60px;
    width: auto;
    object-fit: contain;
  }

  @media screen and (min-width: 750px) {
    .footer__logo img {
      height: 80px;
    }
  }

  .footer__content {
    padding: 3rem 0;
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media screen and (min-width: 750px) {
    .footer__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem 4rem;
    }
  }

  .footer__email {
    display: block;
    font-size: 0.875rem;
    color: var(--color-foreground);
    text-decoration: underline;
    text-underline-offset: 2px;
    margin-bottom: 1rem;
  }

  .footer__address {
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    font-style: normal;
    line-height: 1.7;
    color: var(--color-foreground);
    opacity: 0.7;
  }

  .footer__column-heading {
    font-family: var(--font-body-family);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin: 0 0 1rem;
    opacity: 0.6;
  }

  .footer__nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer__nav-item {
    margin-bottom: 0.75rem;
  }

  .footer__nav-link {
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    color: var(--color-foreground);
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .footer__nav-link:hover {
    opacity: 0.7;
  }

  .footer__bottom {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  @media screen and (min-width: 750px) {
    .footer__bottom {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }

  .footer__bottom-left {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .footer__say-hello {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.875rem;
    text-decoration: none;
    color: var(--color-foreground);
    transition: opacity 0.3s ease;
  }

  .footer__say-hello:hover {
    opacity: 0.7;
  }

  .footer__arrow {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border: 1px solid var(--color-border);
    border-radius: 50%;
    transition: transform 0.3s ease, border-color 0.3s ease;
  }

  .footer__say-hello:hover .footer__arrow {
    transform: translateX(4px);
    border-color: var(--color-foreground);
  }

  .footer__social {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .footer__social-link {
    color: var(--color-foreground);
    transition: opacity 0.3s ease;
  }

  .footer__social-link:hover {
    opacity: 0.7;
  }

  .footer__copyright {
    font-family: var(--font-body-family);
    font-size: 0.75rem;
    color: var(--color-foreground);
    opacity: 0.6;
    margin: 0;
  }
{% endstylesheet %}

