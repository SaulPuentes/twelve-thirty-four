<footer
  id="Footer-{{ section.id }}"
  class="footer"
>
  <div class="page-width">
    {%- comment -%} Top Row: Logo and Title {%- endcomment -%}
    <div class="footer__header">
      <h2 class="footer__title h3">Get in touch!</h2>
      {%- if settings.logo != blank -%}
        <div class="footer__logo">
          <img
            src="{{ settings.logo | image_url: width: 200 }}"
            alt="{{ shop.name }}"
            height="80"
            loading="lazy"
          >
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} Middle Row: Content Grid {%- endcomment -%}
    <div class="footer__content">
      <div class="footer__grid">
        {%- comment -%} Contact Info {%- endcomment -%}
        <div class="footer__column footer__column--contact">
          {%- if section.settings.email != blank -%}
            <a href="mailto:{{ section.settings.email }}" class="footer__email">
              {{ section.settings.email }}
            </a>
          {%- endif -%}

          {%- if section.settings.address != blank -%}
            <address class="footer__address">
              {{ section.settings.address | newline_to_br }}
            </address>
          {%- endif -%}
        </div>

        {%- comment -%} Link Columns {%- endcomment -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'link_column' -%}
            <div class="footer__column footer__column--links" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="footer__column-heading">{{ block.settings.heading }}</h3>
              {%- endif -%}
              
                <ul class="footer__nav-list">
                {%- if block.settings.link_1_text != blank and block.settings.link_1_url != blank -%}
                  <li class="footer__nav-item">
                    <a href="{{ block.settings.link_1_url }}" class="footer__nav-link">
                      {{ block.settings.link_1_text }}
                    </a>
                  </li>
                {%- endif -%}
                {%- if block.settings.link_2_text != blank and block.settings.link_2_url != blank -%}
                  <li class="footer__nav-item">
                    <a href="{{ block.settings.link_2_url }}" class="footer__nav-link">
                      {{ block.settings.link_2_text }}
                    </a>
                  </li>
                {%- endif -%}
                {%- if block.settings.link_3_text != blank and block.settings.link_3_url != blank -%}
                  <li class="footer__nav-item">
                    <a href="{{ block.settings.link_3_url }}" class="footer__nav-link">
                      {{ block.settings.link_3_text }}
                    </a>
                  </li>
                {%- endif -%}
                {%- if block.settings.link_4_text != blank and block.settings.link_4_url != blank -%}
                  <li class="footer__nav-item">
                    <a href="{{ block.settings.link_4_url }}" class="footer__nav-link">
                      {{ block.settings.link_4_text }}
                    </a>
                  </li>
                {%- endif -%}
                {%- if block.settings.link_5_text != blank and block.settings.link_5_url != blank -%}
                  <li class="footer__nav-item">
                    <a href="{{ block.settings.link_5_url }}" class="footer__nav-link">
                      {{ block.settings.link_5_text }}
                    </a>
                  </li>
                {%- endif -%}
                {%- if block.settings.link_6_text != blank and block.settings.link_6_url != blank -%}
                    <li class="footer__nav-item">
                    <a href="{{ block.settings.link_6_url }}" class="footer__nav-link">
                      {{ block.settings.link_6_text }}
                      </a>
                    </li>
                {%- endif -%}
                </ul>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    {%- comment -%} Bottom Row: Social + Copyright {%- endcomment -%}
    <div class="footer__bottom">
      <div class="footer__bottom-left">
        {%- if section.settings.show_say_hello -%}
          <a href="{{ routes.root_url }}pages/contact" class="footer__say-hello">
            {% render 'animated-arrow' %}
            <span>Say hello</span>
          </a>
        {%- endif -%}

        <div class="footer__social">
          {% render 'social-media', class: 'footer__social', link_class: 'footer__social-link', icon_size: 20 %}
        </div>
      </div>

      <div class="footer__bottom-right">
        <p class="footer__copyright">
          &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text | default: 'All rights reserved.' }}
        </p>
      </div>
    </div>
  </div>
</footer>

{% stylesheet %}
  /* Import section heading size variables */
  .footer {
    --section-heading-sm: 1.5rem;
    --section-heading-sm-desktop: 1.875rem;
  }

  .footer {
    position: relative;
    padding: 4rem 2rem;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 100vw;
    margin-left: calc(50% - 50vw);
    border-top: 1px solid var(--color-border);
  }

  @media screen and (min-width: 1024px) {
    .footer {
      padding: 4rem 4rem;
    }
  }

  .footer__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .footer__title {
    font-family: var(--font-heading-family);
    font-size: var(--section-heading-sm);
    line-height: 1.1;
    margin: 0;
  }

  @media screen and (min-width: 1024px) {
    .footer__title {
      font-size: var(--section-heading-sm-desktop);
    }
  }

  .footer__logo {
    width: 3rem;
    height: 5rem;
    position: relative;
  }

  .footer__logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .footer__content {
    padding: 3rem 0 3rem 0;
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media screen and (min-width: 768px) {
    .footer__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .footer__grid {
      grid-template-columns: repeat(9, 1fr);
      gap: 2rem;
    }

    .footer__column--contact {
      grid-column: span 3;
    }

    .footer__column--links {
      grid-column: span 3;
    }
  }

  .footer__email {
    display: block;
    font-size: 0.875rem;
    color: var(--color-foreground);
    text-decoration: underline;
    text-underline-offset: 2px;
    margin-bottom: 1rem;
  }

  .footer__address {
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    font-style: normal;
    line-height: 1.7;
    color: var(--color-foreground);
    opacity: 0.7;
  }

  .footer__column-heading {
    display: none;
  }

  .footer__nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer__nav-link {
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    color: var(--color-foreground);
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .footer__nav-link:hover {
    opacity: 0.7;
  }

  .footer__bottom {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  @media screen and (min-width: 1024px) {
    .footer__bottom {
      grid-template-columns: repeat(12, 1fr);
      gap: 2rem;
    }
  }

  .footer__bottom-left {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  @media screen and (min-width: 768px) {
    .footer__bottom-left {
      flex-direction: row;
      align-items: center;
    }
  }

  @media screen and (min-width: 1024px) {
  .footer__bottom-left {
      grid-column: span 9;
    }
  }

  .footer__bottom-right {
    display: flex;
  }

  @media screen and (min-width: 1024px) {
    .footer__bottom-right {
      grid-column: span 3;
      justify-content: flex-end;
    }
  }

  .footer__say-hello {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.875rem;
    text-decoration: none;
    color: var(--color-foreground);
    transition: color 0.3s ease;
  }

  .footer__say-hello:hover {
    color: rgba(var(--color-foreground-rgb), 0.7);
  }

  .footer__social {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    color: var(--color-foreground);
    transition: color 0.3s ease;
  }

  .footer__social-link:hover {
    color: rgba(var(--color-foreground-rgb), 0.7);
  }

  .footer__copyright {
    font-family: var(--font-body-family);
    font-size: 0.75rem;
    color: var(--color-foreground);
    opacity: 0.6;
    margin: 0;
    text-align: left;
  }

  @media screen and (min-width: 1024px) {
    .footer__copyright {
      text-align: right;
    }
  }
{% endstylesheet %}

