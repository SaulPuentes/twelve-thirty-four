{%- liquid
  assign first_slide = section.blocks | first
  assign has_multiple_slides = false
  if section.blocks.size > 1
    assign has_multiple_slides = true
  endif
-%}

<section
  id="Hero-{{ section.id }}"
  class="hero-slideshow"
  data-hero-slideshow
  style="
    --hero-height: {{ section.settings.height }}vh;
    --hero-content-max-width: {{ section.settings.content_max_width }}px;
  "
>
  {%- comment -%} Slides {%- endcomment -%}
  <div class="hero-slideshow__slides" data-slides>
    {%- for block in section.blocks -%}
      <div
        class="hero-slideshow__slide{% if forloop.first %} hero-slideshow__slide--active{% endif %}"
        data-slide="{{ forloop.index0 }}"
        data-text-color="{{ block.settings.text_color }}"
        style="
          --slide-overlay-color: {{ block.settings.overlay_color }};
          --slide-overlay-opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
        "
        {{ block.shopify_attributes }}
      >
        {%- if block.settings.image != blank -%}
          <img
            src="{{ block.settings.image | image_url: width: 3840 }}"
            alt="{{ block.settings.image.alt | default: block.settings.heading | escape }}"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            class="hero-slideshow__image"
            loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
            fetchpriority="{% if forloop.first %}high{% else %}auto{% endif %}"
          >
        {%- else -%}
          {{ 'hero-apparel-1' | placeholder_svg_tag: 'hero-slideshow__placeholder' }}
        {%- endif -%}

        <div class="hero-slideshow__overlay"></div>
      </div>
    {%- endfor -%}
  </div>

  {%- comment -%} Content {%- endcomment -%}
  <div class="hero-slideshow__content page-width">
    <div class="hero-slideshow__content-inner hero-slideshow__content--{{ section.settings.content_position }}">
      {%- for block in section.blocks -%}
        <div
          class="hero-slideshow__text hero-slideshow--text-{{ block.settings.text_color }}{% if forloop.first %} hero-slideshow__text--active{% endif %}"
          data-text="{{ forloop.index0 }}"
        >
          {%- if block.settings.subheading != blank -%}
            <p class="hero-slideshow__subheading">{{ block.settings.subheading }}</p>
          {%- endif -%}

          {%- if block.settings.heading != blank -%}
            <h1 class="hero-slideshow__heading">{{ block.settings.heading }}</h1>
          {%- endif -%}
        </div>
      {%- endfor -%}

      {%- comment -%} Side Links (like prototype) {%- endcomment -%}
      {%- if section.settings.left_link_label != blank or section.settings.right_link_label != blank -%}
        <div class="hero-slideshow__side-links" data-side-links>
          {%- if section.settings.left_link_label != blank -%}
            <a href="{{ section.settings.left_link_url }}" class="hero-slideshow__side-link hero-slideshow__side-link--left">
              <span>{{ section.settings.left_link_label }}</span>
              <span class="hero-slideshow__side-link-underline"></span>
            </a>
          {%- endif -%}

          {%- if section.settings.right_link_label != blank -%}
            <a href="{{ section.settings.right_link_url }}" class="hero-slideshow__side-link hero-slideshow__side-link--right">
              <span>{{ section.settings.right_link_label }}</span>
              <span class="hero-slideshow__side-link-underline"></span>
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>

  {%- comment -%} Navigation Dots {%- endcomment -%}
  {%- if has_multiple_slides and section.settings.show_navigation -%}
    <div class="hero-slideshow__nav" data-nav>
      {%- for block in section.blocks -%}
        <button
          type="button"
          class="hero-slideshow__nav-dot{% if forloop.first %} hero-slideshow__nav-dot--active{% endif %}"
          data-slide-nav="{{ forloop.index0 }}"
          aria-label="{{ 'accessibility.slide_number' | t: number: forloop.index }}"
        ></button>
      {%- endfor -%}
    </div>
  {%- endif -%}
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const heroSection = document.querySelector('[data-hero-slideshow]');
    if (!heroSection) return;

    const slides = heroSection.querySelectorAll('[data-slide]');
    const texts = heroSection.querySelectorAll('[data-text]');
    const navDots = heroSection.querySelectorAll('[data-slide-nav]');
    const sideLinks = heroSection.querySelector('[data-side-links]');
    const navContainer = heroSection.querySelector('[data-nav]');

    // Store text colors for each slide
    const slideTextColors = [
      {%- for block in section.blocks -%}
        '{{ block.settings.text_color }}'{% unless forloop.last %},{% endunless %}
      {%- endfor -%}
    ];

    // Function to update text color classes
    function updateTextColor(index) {
      const textColor = slideTextColors[index] || 'white';

      // Update side links
      if (sideLinks) {
        sideLinks.classList.remove('hero-slideshow--text-white', 'hero-slideshow--text-black');
        sideLinks.classList.add('hero-slideshow--text-' + textColor);
      }

      // Update nav dots
      if (navContainer) {
        navContainer.classList.remove('hero-slideshow--text-white', 'hero-slideshow--text-black');
        navContainer.classList.add('hero-slideshow--text-' + textColor);
      }

      // Set data attribute on body for header to use
      document.body.setAttribute('data-hero-text-color', textColor);
    }

    // Set initial text color
    updateTextColor(0);

    // Mark animation as complete after first animation finishes (1.3s total: 0.3s delay + 0.8s animation + 0.2s buffer)
    setTimeout(function() {
      heroSection.classList.add('hero-slideshow--animation-complete');
    }, 1300);

    if (slides.length <= 1) return;

    let currentIndex = 0;
    let isAnimating = false;
    const autoplayInterval = {{ section.settings.autoplay_speed }}000;

    function goToSlide(index) {
      if (isAnimating || index === currentIndex) return;
      isAnimating = true;

      // Fade out current slide
      slides[currentIndex].classList.remove('hero-slideshow__slide--active');
      texts[currentIndex].classList.remove('hero-slideshow__text--active');
      if (navDots.length) navDots[currentIndex].classList.remove('hero-slideshow__nav-dot--active');

      // Fade in new slide
      slides[index].classList.add('hero-slideshow__slide--active');
      texts[index].classList.add('hero-slideshow__text--active');
      if (navDots.length) navDots[index].classList.add('hero-slideshow__nav-dot--active');

      // Update text color for new slide
      updateTextColor(index);

      currentIndex = index;

      setTimeout(function() {
        isAnimating = false;
      }, 1000);
    }

    function nextSlide() {
      const next = (currentIndex + 1) % slides.length;
      goToSlide(next);
    }

    // Navigation dots click
    navDots.forEach(function(dot, index) {
      dot.addEventListener('click', function() {
        goToSlide(index);
      });
    });

    // Autoplay
    {% if section.settings.autoplay %}
      let autoplayTimer = setInterval(nextSlide, autoplayInterval);

      heroSection.addEventListener('mouseenter', function() {
        clearInterval(autoplayTimer);
      });

      heroSection.addEventListener('mouseleave', function() {
        autoplayTimer = setInterval(nextSlide, autoplayInterval);
      });
    {% endif %}

    // Parallax effect
    {% if section.settings.enable_parallax %}
      window.addEventListener('scroll', function() {
        const scrollY = window.pageYOffset;
        const heroHeight = heroSection.offsetHeight;
        
        if (scrollY < heroHeight) {
          const parallaxOffset = scrollY * 0.4;
          slides.forEach(function(slide) {
            const img = slide.querySelector('.hero-slideshow__image');
            if (img) {
              img.style.transform = 'translateY(' + parallaxOffset + 'px) scale(1.1)';
            }
          });
        }
      });
    {% endif %}
  });
</script>

{% stylesheet %}
  /* Side link animations with vertical centering */
  @keyframes slideInLeftWithCenter {
    from {
      opacity: 0;
      transform: translateX(-60px) translateY(-50%);
    }
    to {
      opacity: 0.8;
      transform: translateX(0) translateY(-50%);
    }
  }

  @keyframes slideInRightWithCenter {
    from {
      opacity: 0;
      transform: translateX(60px) translateY(-50%);
    }
    to {
      opacity: 0.8;
      transform: translateX(0) translateY(-50%);
    }
  }
  .hero-slideshow {
    position: relative;
    width: 100%;
    max-width: 100%;
    height: var(--hero-height, 100vh);
    overflow: hidden;
  }

  .hero-slideshow__slides {
    position: absolute;
    inset: 0;
  }

  .hero-slideshow__slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 1s ease-in-out;
  }

  .hero-slideshow__slide--active {
    opacity: 1;
  }

  .hero-slideshow__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transform: scale(1.1);
    will-change: transform;
  }

  .hero-slideshow__placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background-color: #e0e0e0;
  }

  .hero-slideshow__overlay {
    position: absolute;
    inset: 0;
    z-index: 5;
    pointer-events: none;
    background-color: var(--slide-overlay-color, transparent);
    opacity: var(--slide-overlay-opacity, 0);
    transition: opacity 1s ease-in-out;
  }

  .hero-slideshow__content {
    position: relative;
    z-index: 10;
    height: 100%;
    display: flex;
    align-items: center;
  }

  .hero-slideshow__content-inner {
    width: 100%;
    position: relative;
  }

  .hero-slideshow__content--center {
    margin: 0 auto;
    text-align: center;
  }

  .hero-slideshow__content--left {
    margin-right: auto;
    text-align: left;
  }

  .hero-slideshow__content--right {
    margin-left: auto;
    text-align: right;
  }

  .hero-slideshow__text {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    opacity: 0;
    transition: opacity 0.6s ease-in-out;
  }

  .hero-slideshow__text--active {
    opacity: 1;
    position: relative;
    transform: none;
  }

  .hero-slideshow__subheading {
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin: 0 0 1rem;
    color: currentColor;
    opacity: 0.8;
  }

  .hero-slideshow__heading {
    font-family: var(--font-heading-family);
    font-size: var(--font-size-h1);
    font-weight: var(--font-heading-weight);
    line-height: 1.1;
    margin: 0 0 2rem;
    color: currentColor;
  }

  /* Initial state for animation elements */
  .hero-slideshow__text .hero-slideshow__subheading,
  .hero-slideshow__text .hero-slideshow__heading {
    opacity: 0;
  }

  /* Sequence animation for active text elements - only on first load */
  .hero-slideshow:not(.hero-slideshow--animation-complete) .hero-slideshow__text--active .hero-slideshow__subheading {
    animation: slideInLeft 0.8s var(--animation-easing, ease) both;
    animation-delay: 0.1s;
  }

  .hero-slideshow:not(.hero-slideshow--animation-complete) .hero-slideshow__text--active .hero-slideshow__heading {
    animation: slideInBottom 0.8s var(--animation-easing, ease) both;
    animation-delay: 0.3s;
  }

  /* After first animation - keep text visible and centered */
  .hero-slideshow--animation-complete .hero-slideshow__text--active .hero-slideshow__subheading,
  .hero-slideshow--animation-complete .hero-slideshow__text--active .hero-slideshow__heading {
    opacity: 1;
    transform: none;
    animation: none;
  }

  /* Reset animations when text becomes inactive */
  .hero-slideshow__text:not(.hero-slideshow__text--active) .hero-slideshow__subheading,
  .hero-slideshow__text:not(.hero-slideshow__text--active) .hero-slideshow__heading {
    animation: none;
    opacity: 0;
  }

  /* Side Links */
  .hero-slideshow__side-links {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    display: none;
    pointer-events: none;
  }

  @media screen and (min-width: 1024px) {
    .hero-slideshow__side-links {
      display: block;
    }
  }

  .hero-slideshow__side-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    font-family: var(--font-body-family);
    font-size: 0.75rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    color: currentColor;
    opacity: 0;
    pointer-events: auto;
    transition: opacity 0.3s ease;
  }

  .hero-slideshow__side-link:hover {
    opacity: 1 !important;
  }

  .hero-slideshow__side-link-underline {
    display: block;
    width: 0;
    height: 2px;
    background-color: currentColor;
    transition: width 0.3s ease;
  }

  .hero-slideshow__side-link:hover .hero-slideshow__side-link-underline {
    width: 100%;
  }

  .hero-slideshow__side-link--left {
    position: absolute;
    left: 2rem;
    top: 50%;
    animation: slideInLeftWithCenter 0.8s var(--animation-easing, ease) forwards;
    animation-delay: 0.7s;
  }

  .hero-slideshow__side-link--right {
    position: absolute;
    right: 2rem;
    top: 50%;
    animation: slideInRightWithCenter 0.8s var(--animation-easing, ease) forwards;
    animation-delay: 0.7s;
  }

  /* Navigation Dots */
  .hero-slideshow__nav {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.5rem;
    z-index: 20;
  }

  .hero-slideshow__nav-dot {
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 50%;
    background-color: currentColor;
    opacity: 0.3;
    border: none;
    padding: 0;
    cursor: pointer;
    transition: width 0.3s ease, opacity 0.3s ease;
  }

  .hero-slideshow__nav-dot--active {
    width: 2rem;
    border-radius: 0.25rem;
    opacity: 1;
  }

  /* Mobile adjustments */
  @media screen and (max-width: 749px) {
    .hero-slideshow__heading {
      font-size: clamp(2rem, 10vw, 3rem);
    }

    .hero-slideshow__content-inner {
      padding: 0 1rem;
    }
  }

  /* Text color variants */
  .hero-slideshow--text-white {
    color: #ffffff;
  }

  .hero-slideshow--text-white .hero-slideshow__subheading,
  .hero-slideshow--text-white .hero-slideshow__heading,
  .hero-slideshow--text-white .hero-slideshow__side-link,
  .hero-slideshow--text-white .hero-slideshow__nav-dot {
    color: #ffffff;
  }

  .hero-slideshow--text-white .button--primary {
    background-color: #ffffff;
    color: #000000;
    border-color: #ffffff;
  }

  .hero-slideshow--text-white .button--primary:hover {
    background-color: transparent;
    color: #ffffff;
  }

  .hero-slideshow--text-white .button--secondary {
    background-color: transparent;
    color: #ffffff;
    border-color: #ffffff;
  }

  .hero-slideshow--text-white .button--secondary:hover {
    background-color: #ffffff;
    color: #000000;
  }

  .hero-slideshow--text-black {
    color: #000000;
  }

  .hero-slideshow--text-black .hero-slideshow__subheading,
  .hero-slideshow--text-black .hero-slideshow__heading,
  .hero-slideshow--text-black .hero-slideshow__side-link,
  .hero-slideshow--text-black .hero-slideshow__nav-dot {
    color: #000000;
  }

  .hero-slideshow--text-black .button--primary {
    background-color: #000000;
    color: #ffffff;
    border-color: #000000;
  }

  .hero-slideshow--text-black .button--primary:hover {
    background-color: transparent;
    color: #000000;
  }

  .hero-slideshow--text-black .button--secondary {
    background-color: transparent;
    color: #000000;
    border-color: #000000;
  }

  .hero-slideshow--text-black .button--secondary:hover {
    background-color: #000000;
    color: #ffffff;
  }
{% endstylesheet %}

