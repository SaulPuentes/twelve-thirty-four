<section
  id="ImageWithText-{{ section.id }}"
  class="image-text section-spacing color-{{ section.settings.color_scheme }}"
  style="
    --image-text-image-width: {{ section.settings.image_width }}%;
  "
>
  <div class="page-width">
    <div class="image-text__grid image-text__grid--{{ section.settings.layout }}">
      {%- comment -%} Image Column {%- endcomment -%}
      <div class="image-text__media">
        {%- if section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 1200 }}"
            alt="{{ section.settings.image.alt | default: section.settings.heading | escape }}"
            width="600"
            height="{{ 600 | divided_by: section.settings.image.aspect_ratio | round }}"
            class="image-text__image"
            loading="lazy"
          >
        {%- else -%}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'image-text__placeholder' }}
        {%- endif -%}

        {%- if section.settings.caption != blank -%}
          <p class="image-text__caption">{{ section.settings.caption }}</p>
        {%- endif -%}
      </div>

      {%- comment -%} Text Column {%- endcomment -%}
      <div class="image-text__content">
        {%- if section.settings.subheading != blank -%}
          <p class="image-text__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <h2 class="image-text__heading h2">{{ section.settings.heading }}</h2>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="image-text__text rte">
            {{ section.settings.text }}
          </div>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
          <a
            href="{{ section.settings.button_link }}"
            class="image-text__button button button--{{ section.settings.button_style }}"
          >
            <span class="image-text__button-arrow">â†’</span>
            <span>{{ section.settings.button_label }}</span>
          </a>
        {%- endif -%}

        {%- comment -%} Partner Logos {%- endcomment -%}
        {%- if section.settings.show_logos -%}
          <div class="image-text__logos">
            {%- for block in section.blocks -%}
              {%- if block.settings.logo != blank -%}
                <div class="image-text__logo" {{ block.shopify_attributes }}>
                  <img
                    src="{{ block.settings.logo | image_url: width: 400 }}"
                    alt="{{ block.settings.logo.alt | escape }}"
                    height="60"
                    loading="lazy"
                  >
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .image-text {
    padding: var(--section-spacing, 4rem) 0;
  }

  .image-text__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media screen and (min-width: 990px) {
    .image-text__grid {
      grid-template-columns: var(--image-text-image-width, 50%) 1fr;
      gap: 4rem;
    }

    .image-text__grid--image-right {
      grid-template-columns: 1fr var(--image-text-image-width, 50%);
    }

    .image-text__grid--image-right .image-text__media {
      order: 2;
    }

    .image-text__grid--image-right .image-text__content {
      order: 1;
    }
  }

  .image-text__media {
    position: relative;
  }

  .image-text__image,
  .image-text__placeholder {
    width: 100%;
    height: auto;
    object-fit: cover;
    aspect-ratio: 4 / 3;
    border-radius: 2px;
  }

  .image-text__caption {
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--color-foreground);
    opacity: 0.8;
    margin: 1.5rem 0 0;
  }

  .image-text__content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .image-text__subheading {
    font-family: var(--font-body-family);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin: 0 0 0.5rem;
    opacity: 0.6;
  }

  .image-text__heading {
    margin: 0 0 1.5rem;
  }

  .image-text__text {
    font-family: var(--font-body-family);
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-foreground);
    opacity: 0.8;
  }

  .image-text__text p {
    margin: 0 0 1rem;
  }

  .image-text__text p:last-child {
    margin-bottom: 0;
  }

  .image-text__text strong {
    font-weight: 600;
    opacity: 1;
  }

  .image-text__button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 2rem;
    font-size: 0.875rem;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .image-text__button:hover {
    opacity: 0.7;
  }

  .image-text__button-arrow {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border: 1px solid currentColor;
    border-radius: 50%;
    transition: transform 0.3s ease;
  }

  .image-text__button:hover .image-text__button-arrow {
    transform: translateX(4px);
  }

  .image-text__logos {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1.5rem 2rem;
    margin-top: 2.5rem;
  }

  .image-text__logo img {
    height: 48px;
    width: auto;
    object-fit: contain;
    opacity: 0.9;
  }

  @media screen and (min-width: 990px) {
    .image-text__logo img {
      height: 60px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Image with text",
  "tag": "section",
  "class": "section-image-text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "caption",
      "label": "Image caption"
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Image width",
      "min": 30,
      "max": 70,
      "step": 5,
      "unit": "%",
      "default": 50
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "image-left", "label": "Image left" },
        { "value": "image-right", "label": "Image right" }
      ],
      "default": "image-left"
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Back to the Roots"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Back to the Roots is a floral arrangement workshop born from a micro grant awarded by the City of Dallas Office of Culture and Arts, benefiting Vogel Alcove.</p><p>This experience will be offered to ten parents experiencing homelessness, creating a safe space to reconnect with nature, creativity, and community.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Get directions"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button style",
      "options": [
        { "value": "primary", "label": "Primary" },
        { "value": "secondary", "label": "Secondary" },
        { "value": "link", "label": "Link" }
      ],
      "default": "link"
    },
    {
      "type": "header",
      "content": "Partner logos"
    },
    {
      "type": "checkbox",
      "id": "show_logos",
      "label": "Show partner logos",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-3"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Partner logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with text",
      "blocks": [
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" }
      ]
    }
  ]
}
{% endschema %}

