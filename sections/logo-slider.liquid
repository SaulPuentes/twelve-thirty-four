{%- comment -%}
  Logo Slider Section
  
  Displays a horizontal scrolling slider of logos using the marquee component.
  The slider automatically adjusts speed on hover and adapts to screen size.
{%- endcomment -%}

<script
  src="{{ 'marquee.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>

{% assign gap_between_elements = section.settings.gap_between_elements %}
{% assign logo_height = section.settings.logo_height %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<marquee-component
  class="section logo-slider gap-style color-{{ section.settings.color_scheme }}"
  style="
    {% render 'gap-style', value: gap_between_elements, name: 'marquee-gap' %}
    --marquee-direction: {{ section.settings.movement_direction }};
    --logo-height: {{ logo_height }}px;
  "
  data-speed-factor="25"
  data-movement-direction="{{ section.settings.movement_direction }}"
  {{ section.shopify_attributes }}
>
  <div
    class="marquee__wrapper"
    ref="wrapper"
  >
    <div
      class="marquee__content"
      ref="content"
    >
      <div
        class="marquee__repeated-items"
        ref="marqueeItems[]"
      >
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'logo' -%}
              {%- liquid
                assign block_logo_height = block.settings.logo_height
                if block_logo_height == blank or block_logo_height == 0
                  assign block_logo_height = logo_height
                endif
              -%}
              <div 
                class="logo-slider__item" 
                style="--item-logo-height: {{ block_logo_height }}px;"
                {{ block.shopify_attributes }}
              >
                {%- if block.settings.image != blank -%}
                  {%- assign logo_title = block.settings.title | default: block.settings.image.alt | default: 'Partner logo' -%}
                  
                  {%- if block.settings.link != blank -%}
                    <a 
                      href="{{ block.settings.link }}"
                      class="logo-slider__link"
                      aria-label="{{ logo_title }}"
                      {% if block.settings.open_in_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
                    >
                  {%- endif -%}
                  
                  {{-
                    block.settings.image
                    | image_url: width: 600
                    | image_tag:
                      loading: 'lazy',
                      class: 'logo-slider__image',
                      alt: logo_title
                  -}}
                  
                  {%- if block.settings.link != blank -%}
                    </a>
                  {%- endif -%}
                {%- else -%}
                  <div class="logo-slider__placeholder">
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</marquee-component>

{% stylesheet %}
  .logo-slider {
    margin-top: 48px;
    margin-bottom: 48px;
  }

  marquee-component {
    display: block;
    width: 100%;
    overflow: hidden;
  }

  .marquee__wrapper {
    display: flex;
    gap: var(--marquee-gap);
    width: fit-content;
    white-space: nowrap;
  }

  .marquee__content {
    min-width: max-content;
    display: flex;
    gap: var(--marquee-gap);
  }

  .marquee__repeated-items {
    min-width: max-content;
    display: flex;
    gap: var(--marquee-gap);
    align-items: center;
    justify-content: center;
  }

  .marquee__repeated-items > * {
    align-content: center;
  }

  .logo-slider__item {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .logo-slider__link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    cursor: pointer;
  }

  .logo-slider__link:focus-visible {
    outline: 2px solid currentColor;
    outline-offset: 4px;
    border-radius: 4px;
  }

  .logo-slider__image {
    object-fit: contain;
    height: var(--item-logo-height, var(--logo-height, 120px));
    width: auto;
    max-width: 100%;
    filter: grayscale(100%);
    opacity: 0.7;
    transition: all 0.3s ease;
  }

  .logo-slider__image:hover,
  .logo-slider__link:hover .logo-slider__image {
    filter: grayscale(0%);
    opacity: 1;
  }

  .logo-slider__link:focus-visible .logo-slider__image {
    filter: grayscale(0%);
    opacity: 1;
  }

  .logo-slider__placeholder {
    width: calc(var(--item-logo-height, var(--logo-height, 120px)) * 2);
    height: var(--item-logo-height, var(--logo-height, 120px));
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-background-secondary, #f5f5f5);
    border-radius: 8px;
  }

  .logo-slider__placeholder svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @media (prefers-reduced-motion: no-preference) {
    marquee-component:not([data-disabled]) .marquee__wrapper {
      animation: marquee-motion var(--marquee-speed) linear infinite var(--marquee-direction);
    }
  }

  @keyframes marquee-motion {
    to {
      transform: translate3d(calc(-50% - (var(--marquee-gap) / 2)), 0, 0);
    }
  }
{% endstylesheet %}

