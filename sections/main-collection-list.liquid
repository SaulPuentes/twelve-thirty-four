{%- comment -%}
  Collection List Section
  Minimalistic grid with image background and title overlay
{%- endcomment -%}

{%- liquid
  assign section_collections = collections
  assign max_items = section.settings.max_collections
-%}

<section
  id="CollectionList-{{ section.id }}"
  class="collection-list"
  style="
    --padding-block-start: {{ section.settings.padding_top }}px;
    --padding-block-end: {{ section.settings.padding_bottom }}px;
    --grid-columns: {{ section.settings.columns_desktop }};
    --grid-columns-tablet: {{ section.settings.columns_tablet }};
    --grid-columns-mobile: {{ section.settings.columns_mobile }};
    --grid-gap: {{ section.settings.gap }}px;
    --card-height: {{ section.settings.card_height }}px;
  "
>
  {%- if section.settings.heading != blank -%}
    <div class="collection-list__header">
      <h2 class="collection-list__heading">{{ section.settings.heading }}</h2>
    </div>
  {%- endif -%}

  <div class="collection-list__grid">
    {%- for collection in section_collections limit: max_items -%}
      <a href="{{ collection.url }}" class="collection-list__card">
        <div class="collection-list__card-image">
          {%- if collection.image != blank -%}
            <img
              src="{{ collection.image | image_url: width: 800 }}"
              srcset="
                {{ collection.image | image_url: width: 400 }} 400w,
                {{ collection.image | image_url: width: 600 }} 600w,
                {{ collection.image | image_url: width: 800 }} 800w
              "
              sizes="(max-width: 749px) 50vw, 33vw"
              alt="{{ collection.image.alt | default: collection.title | escape }}"
              loading="lazy"
              width="{{ collection.image.width }}"
              height="{{ collection.image.height }}"
            >
          {%- elsif collection.products.first.featured_image != blank -%}
            <img
              src="{{ collection.products.first.featured_image | image_url: width: 800 }}"
              srcset="
                {{ collection.products.first.featured_image | image_url: width: 400 }} 400w,
                {{ collection.products.first.featured_image | image_url: width: 600 }} 600w,
                {{ collection.products.first.featured_image | image_url: width: 800 }} 800w
              "
              sizes="(max-width: 749px) 50vw, 33vw"
              alt="{{ collection.title | escape }}"
              loading="lazy"
              width="{{ collection.products.first.featured_image.width }}"
              height="{{ collection.products.first.featured_image.height }}"
>
          {%- else -%}
            {{ 'collection-1' | placeholder_svg_tag: 'collection-list__placeholder' }}
          {%- endif -%}
        </div>
        <div class="collection-list__card-overlay"></div>
        <div class="collection-list__card-content collection-list__card-content--{{ section.settings.title_position }}">
          <h3 class="collection-list__card-title">{{ collection.title }}</h3>
          {%- if section.settings.show_product_count -%}
            <span class="collection-list__card-count">{{ collection.products_count }} {{ 'collections.general.items' | t }}</span>
          {%- endif -%}
        </div>
      </a>
    {%- else -%}
      {%- for i in (1..max_items) -%}
        <div class="collection-list__card collection-list__card--placeholder">
          <div class="collection-list__card-image">
            {{ 'collection-1' | placeholder_svg_tag: 'collection-list__placeholder' }}
          </div>
          <div class="collection-list__card-overlay"></div>
          <div class="collection-list__card-content collection-list__card-content--{{ section.settings.title_position }}">
            <h3 class="collection-list__card-title">Collection {{ i }}</h3>
          </div>
        </div>
      {%- endfor -%}
    {%- endfor -%}
  </div>
</section>

{% stylesheet %}
  .collection-list {
    padding: var(--padding-block-start, 3rem) 2rem var(--padding-block-end, 3rem);
    background-color: var(--color-background, #fff);
  }

  @media screen and (min-width: 990px) {
    .collection-list {
      padding: var(--padding-block-start, 4rem) 4rem var(--padding-block-end, 4rem);
    }
  }

  .collection-list__header {
    text-align: center;
    margin-bottom: 2rem;
  }

  @media screen and (min-width: 750px) {
    .collection-list__header {
      margin-bottom: 3rem;
    }
  }

  .collection-list__heading {
    font-family: var(--font-heading-family);
    font-size: var(--section-heading-md);
    font-weight: var(--font-heading-weight, 400);
    line-height: 1.2;
    margin: 0;
    color: var(--color-foreground);
  }

  .collection-list__grid {
    display: grid;
    grid-template-columns: repeat(var(--grid-columns-mobile, 1), 1fr);
    gap: var(--grid-gap, 1rem);
    max-width: 1600px;
    margin: 0 auto;
  }

  @media screen and (min-width: 750px) {
    .collection-list__grid {
      grid-template-columns: repeat(var(--grid-columns-tablet, 2), 1fr);
    }
  }

  @media screen and (min-width: 990px) {
    .collection-list__grid {
      grid-template-columns: repeat(var(--grid-columns, 3), 1fr);
    }
  }

  .collection-list__card {
    position: relative;
    display: block;
    height: var(--card-height, 400px);
    overflow: hidden;
    text-decoration: none;
    color: #fff;
  }

  .collection-list__card-image {
    position: absolute;
    inset: 0;
  }

  .collection-list__card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .collection-list__card:hover .collection-list__card-image img {
    transform: scale(1.05);
  }

  .collection-list__placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
    fill: #999;
    background-color: #e0e0e0;
  }

  .collection-list__card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.3) 100%
    );
    pointer-events: none;
  }

  .collection-list__card-content {
    position: absolute;
    left: 0;
    right: 0;
    padding: 1.5rem;
    z-index: 1;
  }

  .collection-list__card-content--top {
    top: 0;
  }

  .collection-list__card-content--bottom {
    bottom: 0;
  }

  .collection-list__card-title {
    font-family: var(--font-heading-family);
    font-size: 1.25rem;
    font-weight: 400;
    line-height: 1.3;
    margin: 0;
    color: #fff;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
  }

  @media screen and (min-width: 750px) {
    .collection-list__card-title {
      font-size: 1.5rem;
    }
  }

  .collection-list__card-count {
    display: block;
    margin-top: 0.5rem;
    font-family: var(--font-body-family);
    font-size: 0.75rem;
    font-weight: 400;
    letter-spacing: 0.05em;
    opacity: 0.8;
    color: #fff;
  }
{% endstylesheet %}

