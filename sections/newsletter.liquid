<section
  id="Newsletter-{{ section.id }}"
  class="newsletter"
>
  <div class="newsletter__container">
    <div class="newsletter__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="newsletter__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <p class="newsletter__description">{{ section.settings.description }}</p>
      {%- endif -%}

      <div class="newsletter__form-wrapper">
        {% form 'customer', id: 'NewsletterForm', class: 'newsletter__form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          
          <div class="newsletter__input-group">
            <input
              type="email"
              name="contact[email]"
              id="NewsletterEmail-{{ section.id }}"
              class="newsletter__input"
              placeholder="{{ section.settings.placeholder | default: 'Enter your email' }}"
              aria-label="{{ 'newsletter.label' | t }}"
              required
              autocomplete="email"
              {% if form.errors %}
                aria-invalid="true"
                aria-describedby="Newsletter-error--{{ section.id }}"
              {% endif %}
            >
            <button type="submit" class="newsletter__button">
              {{ section.settings.button_label | default: 'Subscribe' }}
            </button>
          </div>

          {%- if form.errors -%}
            <p id="Newsletter-error--{{ section.id }}" class="newsletter__error">
              {{ form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}
            </p>
          {%- endif -%}

          {%- if form.posted_successfully? -%}
            <p class="newsletter__success">
              {{ 'newsletter.success' | t }}
            </p>
          {%- endif -%}
        {% endform %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .newsletter {
    padding: 4rem 1.5rem;
    background-color: rgba(0, 0, 0, 0.02);
  }

  @media screen and (min-width: 768px) {
    .newsletter {
      padding: 6rem 4rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .newsletter {
      padding: 8rem 4rem;
    }
  }

  .newsletter__container {
    max-width: 42rem;
    margin: 0 auto;
  }

  .newsletter__content {
    text-align: center;
  }

  .newsletter__heading {
    font-family: var(--font-heading-family);
    font-size: 1.875rem;
    line-height: 1.1;
    text-transform: uppercase;
    margin: 0 0 1rem;
  }

  @media screen and (min-width: 768px) {
    .newsletter__heading {
      font-size: 2.25rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .newsletter__heading {
      font-size: 3rem;
    }
  }

  .newsletter__description {
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--color-foreground);
    opacity: 0.6;
    margin: 0 0 2rem;
  }

  @media screen and (min-width: 768px) {
    .newsletter__description {
      font-size: 1rem;
      margin-bottom: 2.5rem;
    }
  }

  .newsletter__form-wrapper {
    max-width: 32rem;
    margin: 0 auto;
  }

  .newsletter__form {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .newsletter__input-group {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  @media screen and (min-width: 640px) {
    .newsletter__input-group {
      flex-direction: row;
    }
  }

  .newsletter__input {
    flex: 1;
    padding: 0.75rem 1rem;
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    background-color: var(--color-background);
    border: 1px solid rgba(0, 0, 0, 0.2);
    color: var(--color-foreground);
    transition: border-color 0.3s ease;
  }

  .newsletter__input::placeholder {
    color: var(--color-foreground);
    opacity: 0.5;
  }

  .newsletter__input:focus {
    outline: none;
    border-color: rgba(0, 0, 0, 0.4);
  }

  .newsletter__input:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .newsletter__button {
    padding: 0.75rem 1.5rem;
    font-family: var(--font-body-family);
    font-size: 0.75rem;
    font-weight: 400;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    white-space: nowrap;
    background-color: var(--color-foreground);
    color: var(--color-background);
    border: none;
    cursor: pointer;
    transition: opacity 0.3s ease;
  }

  .newsletter__button:hover {
    opacity: 0.9;
  }

  .newsletter__button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .newsletter__error {
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    color: #dc2626;
    margin: 1rem 0 0;
  }

  .newsletter__success {
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    color: #16a34a;
    margin: 1rem 0 0;
  }

{% endstylesheet %}

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "section-newsletter",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Subscribe to our newsletter"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Get exclusive deals, early access to new products, and styling tips delivered straight to your inbox."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Email placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Subscribe"
    }
  ],
  "enabled_on": {
    "groups": ["footer"]
  },
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}

