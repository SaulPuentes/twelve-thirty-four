{%- liquid
  assign first_slide = section.blocks | first
  assign has_multiple_slides = false
  if section.blocks.size > 1
    assign has_multiple_slides = true
  endif
-%}

<section
  id="SlideshowWithText-{{ section.id }}"
  class="slideshow-text"
  data-slideshow-text
>
  <div class="page-width">
    <div class="slideshow-text__grid">
      {%- comment -%} Left Column - Text {%- endcomment -%}
      <div class="slideshow-text__content">
        {%- comment -%} Header at top {%- endcomment -%}
        <div class="slideshow-text__header">
          {%- if section.settings.heading != blank -%}
            <h2 class="slideshow-text__heading">{{ section.settings.heading }}</h2>
          {%- endif -%}
        </div>

        {%- comment -%} Slide content (texts and add to cart buttons) {%- endcomment -%}
        <div class="slideshow-text__slides-text">
          {%- for block in section.blocks -%}
            <div
              class="slideshow-text__slide-content{% if forloop.first %} slideshow-text__slide-content--active{% endif %}"
              data-slide-content="{{ forloop.index0 }}"
              {{ block.shopify_attributes }}
            >
              {%- case block.type -%}
                {%- when 'slide' -%}
                  {%- comment -%} Custom slide content {%- endcomment -%}
                  {%- if block.settings.title != blank -%}
                      <h3 class="slideshow-text__slide-title">{{ block.settings.title }}</h3>
                  {%- endif -%}

                  {%- if block.settings.description != blank -%}
                    <div class="slideshow-text__slide-description">
                      {{ block.settings.description }}
                    </div>
                  {%- endif -%}

                  {%- if block.settings.date != blank or block.settings.contact != blank -%}
                    <div class="slideshow-text__slide-meta">
                      {%- if block.settings.date != blank -%}
                        <p class="slideshow-text__meta-item">
                          <span class="slideshow-text__meta-label">Date:</span>
                          {{ block.settings.date }}
                        </p>
                      {%- endif -%}
                      {%- if block.settings.contact != blank -%}
                        <p class="slideshow-text__meta-item">
                          <span class="slideshow-text__meta-label">Contact:</span>
                          <a href="mailto:{{ block.settings.contact }}">{{ block.settings.contact }}</a>
                        </p>
                      {%- endif -%}
                    </div>
                  {%- endif -%}

                {%- when 'product' -%}
                  {%- comment -%} Product slide content {%- endcomment -%}
                  {%- render 'slideshow-product-card',
                    product: block.settings.product,
                    show_vendor: block.settings.show_vendor
                  -%}
              {%- endcase -%}
            </div>
          {%- endfor -%}
        </div>

        {%- comment -%} Navigation dots at bottom {%- endcomment -%}
        <div class="slideshow-text__navigation">
          {%- render 'slideshow-nav',
            count: section.blocks.size,
            prefix: 'slideshow-text',
            data_attribute: 'slide-nav',
            position: 'inline'
          -%}
        </div>
      </div>

      {%- comment -%} Right Column - Images {%- endcomment -%}
      <div class="slideshow-text__media">
        {%- for block in section.blocks -%}
          <div
            class="slideshow-text__slide-image{% if forloop.first %} slideshow-text__slide-image--active{% endif %}"
            data-slide-image="{{ forloop.index0 }}"
          >
            {%- case block.type -%}
              {%- when 'slide' -%}
                {%- if block.settings.image != blank -%}
                  <img
                    src="{{ block.settings.image | image_url: width: 1200 }}"
                    alt="{{ block.settings.image.alt | default: block.settings.title | escape }}"
                    width="600"
                    height="{{ 600 | divided_by: block.settings.image.aspect_ratio | round }}"
                    class="slideshow-text__image"
                    loading="lazy"
                  >
                {%- else -%}
                  {{ 'lifestyle-1' | placeholder_svg_tag: 'slideshow-text__placeholder' }}
                {%- endif -%}

              {%- when 'product' -%}
                {%- assign product = block.settings.product -%}
                {%- if product != blank -%}
                  {%- if product.featured_image -%}
                    <img
                      src="{{ product.featured_image | image_url: width: 1200 }}"
                      alt="{{ product.featured_image.alt | default: product.title | escape }}"
                      width="600"
                      height="{{ 600 | divided_by: product.featured_image.aspect_ratio | round }}"
                      class="slideshow-text__image slideshow-text__image--product"
                      loading="lazy"
                    >
                  {%- else -%}
                    {{ 'product-1' | placeholder_svg_tag: 'slideshow-text__placeholder' }}
                  {%- endif -%}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'slideshow-text__placeholder' }}
                {%- endif -%}
            {%- endcase -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.querySelector('[data-slideshow-text]');
    if (!section) return;

    const contents = section.querySelectorAll('[data-slide-content]');
    const images = section.querySelectorAll('[data-slide-image]');
    const navDots = section.querySelectorAll('[data-slide-nav]');

    if (contents.length <= 1) return;

    // Ensure arrays have matching lengths
    if (contents.length !== images.length) {
      console.warn('Slideshow: Content and image counts do not match');
      return;
    }

    let currentIndex = 0;
    let isAnimating = false;
    const autoplayInterval = {{ section.settings.autoplay_speed }}000;
    let autoplayTimer = null;

    function goToSlide(index) {
      // Validate index
      if (index < 0 || index >= contents.length) return;
      if (isAnimating || index === currentIndex) return;
      if (!contents[index] || !images[index]) return;

      isAnimating = true;
      const oldIndex = currentIndex;

      // Update navigation dots immediately
      if (navDots.length > 0) {
        if (navDots[oldIndex]) {
          navDots[oldIndex].classList.remove('slideshow-nav__dot--active', 'slideshow-text__nav-dot--active');
        }
        if (navDots[index]) {
          navDots[index].classList.add('slideshow-nav__dot--active', 'slideshow-text__nav-dot--active');
        }
      }

      // Start exit animation on old slide
      if (contents[oldIndex]) {
        contents[oldIndex].classList.add('slideshow-text__slide-content--exiting');
        contents[oldIndex].classList.remove('slideshow-text__slide-content--active');
      }
      if (images[oldIndex]) {
        images[oldIndex].classList.add('slideshow-text__slide-image--exiting');
        images[oldIndex].classList.remove('slideshow-text__slide-image--active');
      }

      // Update current index
      currentIndex = index;

      // Wait for exit animation to complete, then show new slide
      setTimeout(function() {
        // Clean up old slide
        if (contents[oldIndex]) {
          contents[oldIndex].classList.remove('slideshow-text__slide-content--exiting');
        }
        if (images[oldIndex]) {
          images[oldIndex].classList.remove('slideshow-text__slide-image--exiting');
        }

        // Show new slide (enters from left)
        if (contents[index]) {
          contents[index].classList.add('slideshow-text__slide-content--active');
        }
        if (images[index]) {
          images[index].classList.add('slideshow-text__slide-image--active');
        }

        // Reset animation lock after entry animation completes
        setTimeout(function() {
          isAnimating = false;
        }, 500);
      }, 500);
    }

    function nextSlide() {
      if (contents.length === 0) return;
      const next = (currentIndex + 1) % contents.length;
      goToSlide(next);
    }

    // Autoplay functions
    {% if section.settings.autoplay %}
      function startAutoplay() {
        if (autoplayTimer) {
          clearInterval(autoplayTimer);
        }
        autoplayTimer = setInterval(nextSlide, autoplayInterval);
      }

      function stopAutoplay() {
        if (autoplayTimer) {
          clearInterval(autoplayTimer);
          autoplayTimer = null;
        }
      }

      // Start autoplay
      startAutoplay();

      // Pause autoplay on hover
      section.addEventListener('mouseenter', stopAutoplay);
      section.addEventListener('mouseleave', startAutoplay);
    {% else %}
      // Autoplay is disabled, define no-op functions
      function startAutoplay() {}
      function stopAutoplay() {}
    {% endif %}

    // Navigation dots click
    navDots.forEach(function(dot, index) {
      if (dot) {
        dot.addEventListener('click', function() {
          goToSlide(index);
          // Reset autoplay timer after manual navigation
          startAutoplay();
        });
      }
    });
  });
</script>

{% stylesheet %}
  /* Section heading size variables */
  .slideshow-text {
    --section-heading-lg: 2.25rem;
    --section-heading-lg-desktop: 3rem;
    --section-heading-sm: 1.5rem;
    --section-heading-sm-desktop: 1.875rem;
  }

  .slideshow-text {
    padding: 4rem 1.5rem;
    border-top: 1px solid var(--color-border, rgba(0, 0, 0, 0.1));
  }

  @media screen and (min-width: 768px) {
    .slideshow-text {
      padding: 5rem 2rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .slideshow-text {
      padding: 6rem 4rem;
    }
  }

  .slideshow-text__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    min-height: 500px;
  }

  @media screen and (min-width: 1024px) {
    .slideshow-text__grid {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      min-height: 600px;
    }
  }

  .slideshow-text__content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 2rem;
    min-height: 100%;
    width: 100%;
    max-width: 600px;
  }

  @media screen and (min-width: 1024px) {
    .slideshow-text__content {
      margin-left: auto;
    }
  }

  .slideshow-text__header {
    flex-shrink: 0;
  }

  .slideshow-text__heading {
    font-family: var(--font-heading-family);
    font-size: var(--section-heading-lg);
    line-height: 1.1;
    margin: 0;
  }

  @media screen and (min-width: 1024px) {
    .slideshow-text__heading {
      font-size: var(--section-heading-lg-desktop);
    }
  }

  .slideshow-text__slides-text {
    position: relative;
    min-height: 150px;
    flex: 1;
    display: flex;
    align-items: flex-end;
  }

  .slideshow-text__navigation {
    flex-shrink: 0;
    margin-top: auto;
  }

  .slideshow-text__slide-content {
    opacity: 0;
    transform: translateX(-2rem);
    transition: opacity 0.5s ease, transform 0.5s ease;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    pointer-events: none;
  }

  .slideshow-text__slide-content--active {
    opacity: 1;
    transform: translateX(0);
    position: absolute;
    bottom: 0;
    pointer-events: auto;
  }

  .slideshow-text__slide-content--exiting {
    opacity: 0;
    transform: translateX(2rem);
    position: absolute;
    bottom: 0;
    pointer-events: none;
  }

  .slideshow-text__slide-title {
    font-family: var(--font-heading-family);
    font-size: var(--section-heading-sm);
    font-weight: var(--font-heading-weight, 400);
    line-height: 1.2;
    margin: 0 0 0.75rem;
    color: var(--color-foreground);
  }

  @media screen and (min-width: 1024px) {
    .slideshow-text__slide-title {
      font-size: var(--section-heading-sm-desktop);
    }
  }

  .slideshow-text__slide-description {
    font-family: var(--font-body-family);
    font-size: 0.9375rem;
    line-height: 1.7;
    color: var(--color-foreground);
    opacity: 0.7;
    margin-bottom: 1.25rem;
    max-width: 480px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .slideshow-text__slide-meta {
    font-family: var(--font-body-family);
    font-size: 0.8125rem;
  }

  .slideshow-text__meta-item {
    margin: 0 0 0.375rem;
    color: var(--color-foreground);
    opacity: 0.6;
  }

  .slideshow-text__meta-label {
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    opacity: 0.9;
  }

  .slideshow-text__meta-item a {
    color: var(--color-foreground);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: opacity 0.3s ease;
  }

  .slideshow-text__meta-item a:hover {
    opacity: 0.7;
  }

  /* Navigation styles - override snippet defaults */
  .slideshow-text__nav {
    --nav-dot-color: var(--color-foreground);
  }

  .slideshow-text__media {
    position: relative;
    aspect-ratio: 3 / 4;
    overflow: hidden;
  }

  @media screen and (min-width: 1024px) {
    .slideshow-text__media {
      max-height: 85vh;
    }
  }

  .slideshow-text__slide-image {
    position: absolute;
    inset: 0;
    opacity: 0;
    transform: translateX(-2rem) scale(1.05);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .slideshow-text__slide-image--active {
    opacity: 1;
    transform: translateX(0) scale(1);
  }

  .slideshow-text__slide-image--exiting {
    opacity: 0;
    transform: translateX(2rem) scale(1.05);
  }

  .slideshow-text__image,
  .slideshow-text__placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .slideshow-text__image--product {
    transition: transform 0.6s ease, opacity 0.3s ease;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Slideshow with text",
  "tag": "section",
  "class": "section-slideshow-text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Workshops"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto-rotate slides",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Change slides every",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Custom Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Floral Design Fundamentals"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Learn the art of minimalist floral arrangement in our intimate workshop. Discover how to create stunning compositions that celebrate the natural beauty of each stem.</p>"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date",
          "default": "Every Saturday, 2:00 PM - 5:00 PM"
        },
        {
          "type": "text",
          "id": "contact",
          "label": "Contact email"
        }
      ]
    },
    {
      "type": "product",
      "name": "Product Slide",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "checkbox",
          "id": "show_vendor",
          "label": "Show vendor name",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow with text",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "title": "Floral Design Fundamentals"
          }
        },
        {
          "type": "slide",
          "settings": {
            "title": "Advanced Seasonal Arrangements"
          }
        }
      ]
    }
  ]
}
{% endschema %}

