{%- comment -%}
  Typography System - twelve-thirty-four
  
  Font Stack:
  - Body: MyriadPro (clarity, readability)
  - Headings: ABCGintoNord (modern, editorial)
  - Accent: ABC Arizona Flare (expressive accents)
  
  Performance optimized:
  - woff2 format first (smaller file size, better compression)
  - font-display: swap (prevent FOIT, show fallback immediately)
  - Preloading critical fonts
{%- endcomment -%}

{%- comment -%} Preload critical fonts for optimal performance {%- endcomment -%}
<link
  rel="preload"
  as="font"
  href="{{ 'MyriadPro-Regular.woff2' | asset_url }}"
  type="font/woff2"
  crossorigin
>
<link
  rel="preload"
  as="font"
  href="{{ 'ABCGintoNord-Regular.woff2' | asset_url }}"
  type="font/woff2"
  crossorigin
  fetchpriority="low"
>
<link
  rel="preload"
  as="font"
  href="{{ 'ABCArizonaFlare-Regular.woff2' | asset_url }}"
  type="font/woff2"
  crossorigin
  fetchpriority="low"
>

<style>
  /* ==========================================================================
     @font-face Declarations
     ========================================================================== */

  /* MyriadPro - Body Text
     Clean, legible sans-serif for long-form content and UI elements */
  @font-face {
    font-family: 'MyriadPro';
    src: url('{{ 'MyriadPro-Regular.woff2' | asset_url }}') format('woff2'),
         url('{{ 'MyriadPro-Regular.woff' | asset_url }}') format('woff');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  /* ABCGintoNord - Headings
     Modern, clean sans-serif for titles and section headers */
  @font-face {
    font-family: 'ABCGintoNord';
    src: url('{{ 'ABCGintoNord-Regular.woff2' | asset_url }}') format('woff2'),
         url('{{ 'ABCGintoNord-Regular.woff' | asset_url }}') format('woff');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  /* ABC Arizona Flare - Accent Text
     Expressive display font for badges, quotes, and special callouts
     Use sparingly - not for long text blocks */
  @font-face {
    font-family: 'ABC Arizona Flare';
    src: url('{{ 'ABCArizonaFlare-Regular.woff2' | asset_url }}') format('woff2'),
         url('{{ 'ABCArizonaFlare-Regular.woff' | asset_url }}') format('woff');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  /* ==========================================================================
     CSS Custom Properties - Typography
     ========================================================================== */

  :root {
    /* Font Families */
    --font-body: 'MyriadPro';
    --font-heading: 'ABCGintoNord';
    --font-accent: 'ABC Arizona Flare';

    /* Font Stacks with fallbacks */
    --font-body-family: var(--font-body), -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    --font-heading-family: var(--font-heading), -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    --font-accent-family: var(--font-accent), Georgia, 'Times New Roman', Times, serif;

    /* Font Weights */
    --font-body-weight: 400;
    --font-heading-weight: 400;
    --font-accent-weight: 400;

    /* Font Styles */
    --font-body-style: normal;
    --font-heading-style: normal;
    --font-accent-style: normal;

    /* Line Heights - Optimized for readability */
    --line-height-body: 1.6;
    --line-height-heading: 1.2;
    --line-height-accent: 1.3;

    /* Letter Spacing */
    --letter-spacing-body: 0;
    --letter-spacing-heading: -0.02em;
    --letter-spacing-accent: 0.02em;
  }

  /* ==========================================================================
     Typography Base Styles
     ========================================================================== */

  /* Body Text */
  body {
    font-family: var(--font-body-family);
    font-weight: var(--font-body-weight);
    font-style: var(--font-body-style);
    line-height: var(--line-height-body);
    letter-spacing: var(--letter-spacing-body);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Headings - ABCGintoNord */
  h1, h2, h3, h4, h5, h6,
  .h1, .h2, .h3, .h4, .h5, .h6 {
    font-family: var(--font-heading-family);
    font-weight: var(--font-heading-weight);
    font-style: var(--font-heading-style);
    line-height: var(--line-height-heading);
    letter-spacing: var(--letter-spacing-heading);
    margin-block-start: 0;
    margin-block-end: 0.5em;
  }

  h1, .h1 { font-size: var(--font-size-h1, 3.5rem); }
  h2, .h2 { font-size: var(--font-size-h2, 2.5rem); }
  h3, .h3 { font-size: var(--font-size-h3, 2rem); }
  h4, .h4 { font-size: var(--font-size-h4, 1.5rem); }
  h5, .h5 { font-size: var(--font-size-h5, 1.25rem); }
  h6, .h6 { font-size: var(--font-size-h6, 1rem); }

  /* Hero & Section Titles - Large display headings */
  .hero-title,
  .section-title {
    font-family: var(--font-heading-family);
    font-weight: var(--font-heading-weight);
    line-height: var(--line-height-heading);
    letter-spacing: var(--letter-spacing-heading);
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 5rem);
  }

  .section-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
  }

  /* ==========================================================================
     Accent Typography - ABC Arizona Flare
     Use for short, impactful text only (badges, quotes, highlights)
     Avoid for long-form content for accessibility
     ========================================================================== */

  .accent,
  .badge,
  .highlight,
  .quote,
  .promo-title,
  .special-callout {
    font-family: var(--font-accent-family);
    font-weight: var(--font-accent-weight);
    font-style: var(--font-accent-style);
    line-height: var(--line-height-accent);
    letter-spacing: var(--letter-spacing-accent);
  }

  /* Badge styles */
  .badge {
    display: inline-block;
    padding: 0.25em 0.75em;
    font-size: var(--font-size--xs, 0.8125rem);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .badge--primary {
    background-color: var(--color-primary-button-background);
    color: var(--color-primary-button-text);
  }

  .badge--secondary {
    background-color: var(--color-background);
    color: var(--color-foreground);
    border: 1px solid var(--color-border);
  }

  .badge--accent {
    background-color: var(--color-accent, var(--color-foreground));
    color: var(--color-background);
  }

  /* Quote styles */
  .quote,
  blockquote {
    font-family: var(--font-accent-family);
    font-size: var(--font-size--lg, 1.125rem);
    font-style: italic;
    line-height: var(--line-height-accent);
  }

  blockquote {
    margin: 1.5em 0;
    padding-left: 1.5em;
    border-left: 3px solid var(--color-border);
  }

  /* Highlight text */
  .highlight {
    font-size: var(--font-size--sm, 0.875rem);
  }

  /* Promo/Banner titles */
  .promo-title {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
  }

  /* Special callout */
  .special-callout {
    font-size: var(--font-size--md, 1rem);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* ==========================================================================
     Paragraph & Body Copy Utilities
     ========================================================================== */

  p {
    margin-block-start: 0;
    margin-block-end: 1em;
  }

  .lead,
  .intro-text {
    font-size: var(--font-size--lg, 1.125rem);
    line-height: 1.7;
  }

  .small,
  small {
    font-size: var(--font-size--sm, 0.875rem);
  }

  .caption {
    font-size: var(--font-size--xs, 0.8125rem);
    opacity: 0.8;
  }

  /* ==========================================================================
     Font Family Utility Classes
     ========================================================================== */

  .font-body {
    font-family: var(--font-body-family) !important;
  }

  .font-heading {
    font-family: var(--font-heading-family) !important;
  }

  .font-accent {
    font-family: var(--font-accent-family) !important;
  }

  /* ==========================================================================
     Accessibility - Minimum readable sizes
     ========================================================================== */

  @media (prefers-reduced-motion: reduce) {
    * {
      transition-duration: 0.01ms !important;
    }
  }

  /* Ensure body text never goes below 16px for readability */
  @media screen and (max-width: 749px) {
    body {
      font-size: max(var(--font-size-base, 16px), 16px);
    }
  }
</style>
