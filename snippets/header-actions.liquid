{%- comment -%}
  Header Actions Snippet
  Renders account and cart icons in the header
{%- endcomment -%}

<script
  type="module"
  src="{{ 'cart-icon.js' | asset_url }}"
  fetchpriority="low"
></script>

<div class="header-actions">
  {%- comment -%} Search icon {%- endcomment -%}
  {%- if section.settings.show_search -%}
    <a href="{{ routes.search_url }}" class="header-actions__action hidden md:flex" aria-label="{{ 'accessibility.search' | t }}">
      {% render 'icon', icon: 'search', size: 20 %}
    </a>
  {%- endif -%}

  {%- comment -%} Account icon {%- endcomment -%}
  {%- if shop.customer_accounts_enabled -%}
    <a href="{{ routes.account_url }}" class="header-actions__action hidden md:flex" aria-label="{{ 'accessibility.account' | t }}">
      {% render 'icon', icon: 'account', size: 20 %}
    </a>
  {%- endif -%}

  {%- comment -%} Cart icon {%- endcomment -%}
  <button
    type="button"
    class="header-actions__action header-actions__cart-icon{% unless cart == empty %} header-actions__cart-icon--has-cart{% endunless %}"
    aria-label="{{ 'accessibility.cart' | t }}"
    data-cart-toggle
  >
    <cart-icon data-testid="cart-icon">
      <span class="svg-wrapper" aria-hidden="true">
        {% render 'icon', icon: 'cart', size: 20 %}
      </span>
      {% render 'cart-bubble', limit: 100, live_region: true %}
    </cart-icon>
  </button>
</div>

<script>
  // Connect cart toggle button to cart drawer
  document.addEventListener('DOMContentLoaded', function() {
    const cartToggle = document.querySelector('[data-cart-toggle]');
    const cartDrawer = document.querySelector('#cart-drawer');
    
    if (cartToggle && cartDrawer) {
      cartToggle.addEventListener('click', function(e) {
        e.preventDefault();
        cartDrawer.setAttribute('aria-hidden', 'false');
        document.body.classList.add('overflow-hidden');
      });
    } else if (cartToggle) {
      // Fallback to cart page if no drawer
      cartToggle.addEventListener('click', function() {
        window.location.href = '{{ routes.cart_url }}';
      });
    }
  });
</script>

{% stylesheet %}
  .header-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .header-actions__action {
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    padding: 0;
    cursor: pointer;
    color: var(--color-foreground);
    transition: opacity var(--animation-speed, 0.2s) var(--animation-easing, ease);
  }

  .header-actions__action:hover {
    opacity: 0.7;
  }

  /* Cart icon with bubble */
  .header-actions__cart-icon {
    position: relative;
  }

  cart-icon {
    display: flex;
    position: relative;
  }

  .header-actions__cart-icon .svg-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header-actions__cart-icon .cart-bubble {
    position: absolute;
    top: -8px;
    right: -8px;
    width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header-actions__cart-icon .cart-bubble__background {
    position: absolute;
    inset: 0;
    background-color: var(--color-foreground, #000);
    border-radius: 50%;
  }

  .header-actions__cart-icon .cart-bubble__text {
    position: relative;
    z-index: 1;
    font-size: 10px;
    font-weight: 500;
    color: var(--color-background, #fff);
    line-height: 1;
  }

  /* Donut mask for cart icon when has items */
  .header-actions__cart-icon.header-actions__cart-icon--has-cart .svg-wrapper svg {
    mask: radial-gradient(
      20px at calc(100% - 2px) 4px,
      transparent 45%,
      #fff 45%
    );
  }

  /* Cart bubble animation */
  .cart-bubble--animating .cart-bubble__background {
    animation: grow var(--animation-speed, 0.2s) var(--animation-easing, ease);
  }

  .cart-bubble--animating .cart-bubble__text {
    animation: move-and-fade var(--animation-speed, 0.2s) var(--animation-easing, ease);
  }

  @keyframes grow {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
  }

  @keyframes move-and-fade {
    from {
      transform: translateY(-0.5em);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  /* Responsive */
  @media screen and (max-width: 767px) {
    .hidden {
      display: none !important;
    }
  }

  @media screen and (min-width: 768px) {
    .md\:flex {
      display: flex !important;
    }
  }
{% endstylesheet %}
